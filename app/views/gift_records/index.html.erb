<% content_for(:title, "ギフト記録一覧") %>
<!-- メインコンテナ - 中央寄せ -->
<div class="gift-records-container">
  <!-- ヘッダー部分 -->
  <div class="gift-records-header">
    <h2 class="text-2xl font-bold text-gray-800 mb-3">
    みんなのギフト
    </h2>

  </div>

  <!-- 検索・フィルター機能 -->
  <%= render 'shared/filter_form',
      form_url: gift_records_path,
      relationship_options: @relationship_options,
      event_options: @event_options,
      gift_item_category_options: @gift_item_category_options,
      gift_direction_options: @gift_direction_options,
      gender_options: [["男性", "male"], ["女性", "female"]],
      age_options: [["10代", "10s"], ["20代", "20s"], ["30代", "30s"], ["40代", "40s"], ["50代", "50s"], ["60代", "60s"], ["70代", "70s"], ["80代以上", "80plus"]],
      filter_type_options: [
        ["選択してください", ""],
        ["関係性", "relationship"],
        ["イベント", "event"],
        ["カテゴリ", "gift_item_category"],
        ["ギフト種別", "gift_direction"],
        ["年齢", "age"],
        ["性別", "gender"]
      ],
      total_records: @total_records,
      active_filter_params: [:search, :relationship_id, :age_group, :gender, :event_id, :gift_item_category_id, :sort_by, :gift_direction]
    %>

  <% if @gift_records.any? %>

    <!-- カードグリッドレイアウト（レスポンシブ対応） -->
    <div class="gift-records-grid">
      <% @gift_records.each do |record| %>
        <div class="gift-card-container gift-record-card bg-white rounded-lg shadow-md overflow-hidden transition-all duration-300 transform hover:shadow-xl hover:-translate-y-2" onclick="Turbo.visit('<%= gift_record_path(record, @pagination_params.merge(page: params[:page])) %>')" style="cursor: pointer;">
            <!-- 上半分：ギフト画像または画像プレースホルダー -->
            <div class="gift-card-image relative overflow-hidden">
              <a href="<%= gift_record_path(record, @pagination_params.merge(page: params[:page])) %>"
                 class="absolute inset-0 z-[4]"
                 onclick="event.stopPropagation()"
                 aria-label="ギフト詳細へ移動">
              </a>
              <% if record.has_images? %>
                <!-- ギフト画像（ヘルパーで安全に表示） -->
                <%= gift_main_image_with_fallback(record,
                      size: [400, 300],
                      css_class: "w-full h-full object-cover",
                      loading: "lazy") %>
              <% else %>
                <!-- 画像プレースホルダー -->
                <div class="gift-image-placeholder">
                  <div class="text-center">
                    <div class="w-16 h-16 sm:w-18 sm:h-18 lg:w-18 lg:h-18 xl:w-20 xl:h-20 mx-auto mb-2 sm:mb-3 bg-white rounded-full flex items-center justify-center shadow-sm">
                      <i class="fas fa-gift text-2xl sm:text-2xl lg:text-2xl xl:text-3xl text-primary"></i>
                    </div>
                  </div>
                </div>
              <% end %>

              <!-- お気に入りボタン（左上） -->
              <div class="absolute top-2 left-2 sm:top-3 sm:left-3" onclick="event.stopPropagation();">
                <%= render 'shared/favorite_button', gift_record: record %>
              </div>

            </div>

            <!-- 下半分：ギフト情報 -->
            <div class="p-4 sm:p-4 md:p-4 lg:p-5 xl:p-5 bg-white">
              <!-- モバイル版表示項目 -->
              <div class="sm:hidden">
                <!-- アイテム名 -->
                <div class="mb-2">
                  <h4 class="text-base sm:text-lg font-bold leading-tight text-gray-900 gift-title-clamp">
                    <%= record.item_name.presence || "未設定" %>
                  </h4>
                </div>

               

                <!-- イベント -->
                <div class="mb-2">
                  <div class="flex items-center text-sm">
                     <i class="fas fa-calendar mr-2 text-blue-500"></i>
                    <span class="text-gray-600">
                      <%= truncate(record.event&.name || "未設定", length: 20) %>
                    </span>
                  </div>
                </div>

                <!-- 関係性 -->
                <div class="mb-2">
                  <div class="flex items-center text-sm">
                     <i class="fas fa-users mr-2 text-indigo-500"></i>

                    <span class="text-gray-600">
                      <%= truncate(record.gift_person&.relationship&.name || "未設定", length: 15) %>
                    </span>
                  </div>
                </div>

                <!-- 投稿者情報（フッター） -->
                <div class="mt-3 pt-3 border-t">
                  <div class="flex items-center">
                    <% if record.user.has_avatar? && display_avatar(record.user, :small) %>
                      <%= image_tag display_avatar(record.user, :small), 
                          class: "w-6 h-6 rounded-full object-cover mr-2",
                          alt: "#{record.user.name}のプロフィール画像" %>
                    <% else %>
                      <div class="w-6 h-6 bg-gray-200 rounded-full flex items-center justify-center mr-2">
                        <i class="fas fa-user text-gray-500 text-xs"></i>
                      </div>
                    <% end %>
                    <div>
                      <p class="text-xs font-medium" style="color: #374151 !important;">
                        <%= record.user.name.presence || "ユーザー" %>
                      </p>
                      <p class="text-xs" style="color: #6b7280 !important;">
                        <%= l(record.created_at, format: :short) %>
                      </p>
                    </div>
                  </div>
                </div>
              </div>

              <!-- デスクトップ版表示項目 -->
              <div class="hidden sm:block">
                <!-- アイテム名（メイン情報） -->
                <div class="mb-3">
                  <h4 class="text-base lg:text-lg xl:text-lg font-bold leading-tight text-gray-900 gift-title-clamp">
                    <%= record.item_name.presence || "未設定" %>
                  </h4>
                </div>

                <!-- 贈り先と金額 -->
                <div class="flex justify-between items-center mb-3">
                  <% if record.amount.present? %>
                    <div class="text-right">
                      <span class="text-lg lg:text-xl xl:text-xl font-bold" style="color: #059669 !important;">
                        <%# ¥<%= number_with_delimiter(record.amount) %>
                      </span>
                    </div>
                  <% end %>
                </div>

                <!-- イベントと日付 -->
                <div class="mb-2">
                  <div class="flex items-center text-sm">
                    <i class="fas fa-calendar mr-2 text-blue-500"></i>
                    <span style="color: #4b5563 !important;">
                      <%= truncate(record.event&.name || "未設定", length: 20) %>
                    </span>
                  </div>
                </div>

                <!-- 関係性 -->
                <div class="mb-3">
                  <div class="flex items-center text-sm">
                     <i class="fas fa-users mr-2 text-indigo-500"></i>
                    <span style="color: #4b5563 !important;">
                      <%= truncate(record.gift_person&.relationship&.name || "未設定", length: 15) %>
                    </span>
                  </div>
                </div>

                <!-- メモ（存在する場合） -->
                <% if record.memo.present? %>
                  <div class="mt-3 pt-3 border-t">
                    <p class="text-xs leading-relaxed text-gray-500">
                      <i class="fas fa-sticky-note mr-1 text-yellow-500"></i>
                      <%= truncate(record.memo, length: 28) %>
                    </p>
                  </div>
                <% end %>

                <!-- 投稿者情報（フッター） -->
                <div class="mt-3 pt-3 border-t">
                  <div class="flex items-center">
                    <% if record.user.has_avatar? && display_avatar(record.user, :small) %>
                      <%= image_tag display_avatar(record.user, :small), 
                          class: "w-6 h-6 rounded-full object-cover mr-2",
                          alt: "#{record.user.name}のプロフィール画像" %>
                    <% else %>
                      <div class="w-6 h-6 bg-gray-200 rounded-full flex items-center justify-center mr-2">
                        <i class="fas fa-user text-gray-500 text-xs"></i>
                      </div>
                    <% end %>
                    <div>
                      <p class="text-xs font-medium text-gray-800">
                        <%= record.user.name.presence || "ユーザー" %>
                      </p>
                      <p class="text-xs text-gray-500">
                        <%= l(record.created_at, format: :short) %>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </div>
      <% end %>
    </div>
    
    <!-- ページネーション -->
    <% if @gift_records.respond_to?(:current_page) %>
      <%= render 'shared/pagination',
          collection: @gift_records,
          page_path: ->(page_number) { gift_records_path(@pagination_params.merge(page: page_number)) } %>
    <% end %>
    
    <% else %>
      <% filter_keys = [:search, :gift_person_id, :relationship_id, :age_group, :gender, :event_id, :gift_item_category_id, :sort_by, :gift_direction] %>
      <% has_filters = filter_keys.any? { |key| params[key].present? } %>
      <% secondary_action = if has_filters
           {
             url: gift_records_path,
             icon: 'fas fa-list',
             label: 'すべて表示'
           }
         end %>
      <% primary_action = if user_signed_in?
           {
             url: new_gift_record_path,
             icon: 'fas fa-plus',
             label: has_filters ? '新しい記録を作成' : '最初の記録を作成',
             class: 'inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white btn-primary hover:bg-primary-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary'
           }
         else
           {
             url: new_user_session_path,
             icon: 'fas fa-sign-in-alt',
             label: 'ログインして記録を作成',
             class: 'inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500'
           }
         end %>

      <% empty_title = has_filters ? '検索結果が見つかりませんでした' : 'ギフト記録がありません' %>
      <% empty_body = has_filters ? '検索条件を変更して再度お試しください。' : '最初のギフト記録を作成して、大切な思い出を記録しましょう。' %>

      <%= render 'shared/empty_state',
          icon: 'fas fa-gift',
          title: empty_title,
          body: empty_body,
          primary_action: primary_action,
          secondary_action: secondary_action %>
    <% end %>
</div>
<!-- シェア確認モーダル -->
<%= render 'shared/share_confirmation_modal' %>
