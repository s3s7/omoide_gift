<%# ギフト記録詳細ページ %>
<% content_for(:title, "#{@gift_record.display_item_name} - ギフト記録詳細") %>
<!-- メインコンテナ - 中央寄せ -->
<div class="max-w-6xl mx-auto w-full">
  <%# 一覧への戻り先を判定 %>
  <% back_params = (@pagination_params || {}).dup %>
  <% back_params[:page] = params[:page] if params[:page].present? %>
  <% first_item = case params[:origin]
     when 'my'
       { label: '自分のギフト', url: my_index_gift_records_path(back_params), icon: 'fas fa-gift text-primary' }
     when 'favorites'
       { label: 'お気に入り一覧', url: favorites_path, icon: 'fas fa-heart text-red-500' }
     else
       { label: 'みんなのギフト', url: gift_records_path(back_params), icon: 'fas fa-home text-primary' }
     end %>
  <% back_link_path = first_item[:url] || gift_records_path(back_params) %>

  <%= render 'shared/breadcrumbs', items: [
        first_item,
        { label: truncate(@gift_record.display_item_name, length: 20), current: true }
      ] %>
  <!-- メインコンテンツ -->
 <div class="bg-white shadow-lg rounded-lg overflow-hidden mt-8 w-full">
    <!-- ヘッダー -->
    <div class="px-6 py-4 text-white" style="background-color: #FC913A;">
      <div class="flex justify-between items-start">
        <div>
          <h1 class="text-2xl font-bold">
            <%= @gift_record.display_item_name %>
          </h1>
          <p class="text-orange-100 mt-1">
            <%= @gift_record.display_gift_date %>に贈ったギフト
          </p>
        </div>
        <div class="flex items-center space-x-3">
          <!-- お気に入りボタン -->
          <div class="favorite-show-page">
            <%= render 'shared/favorite_button', gift_record: @gift_record %>
          </div>
          
          <% if user_signed_in? && @gift_record.user == current_user %>
            <% edit_params = params.permit(:origin, :page).to_h %>
            <div class="flex space-x-2">
              <%= link_to edit_gift_record_path(@gift_record, edit_params), 
                  class: "inline-flex items-center px-3 py-2 border border-white/30 rounded-md text-sm font-medium text-white hover:bg-white/20 transition-colors",
                  aria: { label: "このギフト記録を編集" } do %>
                <i class="fas fa-edit mr-1"></i>
                編集
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- 詳細情報 -->
    <div class="px-6 py-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- 基本情報 -->
        <div>
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <i class="fas fa-info-circle text-blue-500 mr-2"></i>
            基本情報
          </h2>
          
          <div class="bg-gray-50 rounded-lg p-4">
            <div class="space-y-4">

              <!-- イベント -->
            <% if @gift_record.event.present? %>
              <div class="flex items-start">
                <div class="flex-shrink-0 w-24 text-sm font-medium text-gray-500">
                  イベント
                </div>
                <div class="flex-1 text-sm text-gray-900">
                  <%= @gift_record.event.name %>
                </div>
              </div>
            <% end %>

            <!-- アイテム名 -->
            <div class="flex items-start">
              <div class="flex-shrink-0 w-24 text-sm font-medium text-gray-500">
                アイテム名
              </div>
              <div class="flex-1 text-sm text-gray-900">
                <%= @gift_record.display_item_name %>
              </div>
            </div>

            <!-- 贈った日 -->
            <div class="flex items-start">
              <div class="flex-shrink-0 w-24 text-sm font-medium text-gray-500">
                贈った日
              </div>
              <div class="flex-1 text-sm text-gray-900">
                <%= @gift_record.display_gift_date %>
              </div>
            </div>

            <!-- 金額 -->
            <div class="flex items-start">
              <div class="flex-shrink-0 w-24 text-sm font-medium text-gray-500">
                金額
              </div>
              <div class="flex-1 text-sm text-gray-900">
                <span class="<%= @gift_record.amount.present? ? 'font-semibold text-green-600' : 'text-gray-400' %>">
                  <%= @gift_record.display_amount %>
                </span>
              </div>
            </div>

            <!-- ギフト分類 -->
            <div class="flex items-start">
              <div class="flex-shrink-0 w-24 text-sm font-medium text-gray-500">
                ギフト分類
              </div>
              <div class="flex-1 text-sm text-gray-900">
                <span class="font-medium" style="color: <%= gift_direction_color(@gift_record) %>;">
                  <i class="<%= gift_direction_icon_class(@gift_record) %> mr-1"></i>
                  <%= gift_direction_display_text(@gift_record) %>
                </span>
              </div>
            </div>

            </div>
          </div>
        </div>

        <!-- 贈り先情報 -->
        <div>
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <i class="fas fa-users text-indigo-500 mr-2"></i>
            贈り先情報
          </h2>
          
          <% if @gift_record.gift_person.present? %>
            <div class="bg-gray-50 rounded-lg p-4">
              <div class="space-y-4">
                <!-- 関係性 -->
                <% if @gift_record.gift_person.relationship.present? %>
                  <div class="flex items-start">
                    <div class="flex-shrink-0 w-20 text-sm font-medium text-gray-500">
                      関係性
                    </div>
                    <div class="flex-1 text-sm text-gray-900">
                      <%= @gift_record.gift_person.relationship.name %>
                    </div>
                  </div>
                <% end %>

                <!-- 年齢（ギフト時点） -->
                <% if @gift_record.gift_person.birthday.present? %>
                  <div class="flex items-start">
                    <div class="flex-shrink-0 w-20 text-sm font-medium text-gray-500">
                      年齢
                    </div>
                    <div class="flex-1 text-sm text-gray-900">
                      <%= @gift_record.gift_person.display_age_at(@gift_record.gift_at || Date.current) %>
                      <span class="text-xs text-gray-500 ml-1">（ギフト時点）</span>
                    </div>
                  </div>
                <% end %>

                <!-- 好きなもの -->
                <% if @gift_record.gift_person.likes.present? %>
                  <div class="flex items-start">
                    <div class="flex-shrink-0 w-20 text-sm font-medium text-gray-500">
                      好きなもの
                    </div>
                    <div class="flex-1 text-sm text-gray-900">
                      <%= simple_format(@gift_record.gift_person.likes) %>
                    </div>
                  </div>
                <% end %>

                <!-- 嫌いなもの -->
                <% if @gift_record.gift_person.dislikes.present? %>
                  <div class="flex items-start">
                    <div class="flex-shrink-0 w-20 text-sm font-medium text-gray-500">
                      嫌いなもの
                    </div>
                    <div class="flex-1 text-sm text-gray-900">
                      <%= simple_format(@gift_record.gift_person.dislikes) %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="text-gray-400 text-sm">
              贈り先情報が設定されていません
            </div>
          <% end %>
        </div>
      </div>

      <!-- メモ -->
      <% if @gift_record.memo.present? %>
        <div class="mt-8">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <i class="fas fa-sticky-note text-yellow-500 mr-2"></i>
            メモ
          </h2>
          <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
            <div class="text-sm text-gray-700 whitespace-pre-line">
              <%= simple_format(@gift_record.memo) %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- ギフト画像 -->
      <% if @gift_record.has_images? %>
        <div class="mt-8" data-controller="image-gallery">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <i class="fas fa-images text-green-500 mr-2"></i>
            ギフト画像
            <span class="ml-2 text-sm font-normal text-gray-500">
              (<%= @gift_record.images_count %>枚)
            </span>
          </h2>
          
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            <% @gift_record.images.each_with_index do |image, index| %>
              <div class="relative group cursor-pointer rounded-lg overflow-hidden bg-gray-100 border border-gray-200 hover:shadow-lg transition-shadow duration-200"
                   data-action="click->image-gallery#openModal"
                   data-index="<%= index %>"
                   role="button"
                   tabindex="0"
                   aria-label="画像を拡大表示 - <%= index + 1 %>枚目">
                
                <!-- 画像 -->
                <div class="aspect-square">
                  <%= image_tag image.variant(resize_to_fill: [300, 300]), 
                      class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-200",
                      alt: "ギフト画像 #{index + 1}",
                      loading: "lazy" %>
                </div>
                
                <!-- オーバーレイ -->
                <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-200 flex items-center justify-center">
                  <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                    <div class="bg-white bg-opacity-90 rounded-full p-2">
                      <i class="fas fa-search-plus text-gray-700"></i>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          
          <!-- 画像モーダル -->
          <div data-image-gallery-target="modal" 
               class="fixed inset-0 bg-black bg-opacity-75 z-50 hidden items-center justify-center p-4"
               data-action="click->image-gallery#closeModal keydown->image-gallery#handleKeydown">
            
            <div class="relative max-w-4xl max-h-full">
              <!-- 閉じるボタン -->
              <button type="button" 
                      class="absolute top-4 right-4 z-10 bg-black bg-opacity-50 text-white rounded-full p-2 hover:bg-opacity-70 transition-all"
                      data-action="click->image-gallery#closeModal"
                      aria-label="画像を閉じる">
                <i class="fas fa-times text-lg"></i>
              </button>
              
              <!-- ナビゲーションボタン -->
              <% if @gift_record.images_count > 1 %>
                <!-- 前の画像 -->
                <button type="button" 
                        class="absolute left-4 top-1/2 transform -translate-y-1/2 z-10 bg-black bg-opacity-50 text-white rounded-full p-3 hover:bg-opacity-70 transition-all"
                        data-action="click->image-gallery#previousImage"
                        data-image-gallery-target="prevButton"
                        aria-label="前の画像">
                  <i class="fas fa-chevron-left"></i>
                </button>
                
                <!-- 次の画像 -->
                <button type="button" 
                        class="absolute right-4 top-1/2 transform -translate-y-1/2 z-10 bg-black bg-opacity-50 text-white rounded-full p-3 hover:bg-opacity-70 transition-all"
                        data-action="click->image-gallery#nextImage"
                        data-image-gallery-target="nextButton"
                        aria-label="次の画像">
                  <i class="fas fa-chevron-right"></i>
                </button>
              <% end %>
              
              <!-- 画像表示エリア -->
              <div class="flex items-center justify-center max-h-full">
                <img data-image-gallery-target="modalImage" 
                     class="max-w-full max-h-full object-contain rounded-lg shadow-2xl"
                     alt="拡大表示中の画像">
              </div>
              
              <!-- 画像情報 -->
              <div class="absolute bottom-4 left-4 right-4 bg-black bg-opacity-50 text-white p-3 rounded-lg">
                <div class="flex justify-between items-center text-sm">
                  <span data-image-gallery-target="imageInfo">
                    画像 1 / <%= @gift_record.images_count %>
                  </span>
                  <span class="text-xs text-gray-300">
                    ESCキーまたはクリックで閉じる
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- フッター -->
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
      <div class="flex justify-between items-center text-sm text-gray-500">
        <div>
          作成日: <%= l(@gift_record.created_at, format: :long) %>
          <% if @gift_record.updated_at != @gift_record.created_at %>
            <span class="ml-4">
              更新日: <%= l(@gift_record.updated_at, format: :long) %>
            </span>
          <% end %>
        </div>
        <div class="text-gray-600">
          <%# Build tweet text including item name, relationship, and event %>
          <% item_name = @gift_record.item_name.presence || "未設定" %>
          <% relationship_name = @gift_record.gift_person&.relationship&.name.presence || "未設定" %>
          <% event_name = @gift_record.event&.name.presence || "未設定" %>
          <% event_tag = @gift_record.event&.name.to_s.gsub(/\s+/, '') %>
          <% tweet_text = [
              "✨ おすすめのギフト記録！",
              "",
              "🎁 ギフトアイテム: #{item_name}",
              "👥 関係性: #{relationship_name}",
              "📅 イベント: #{event_name}",
              "",
              ["#めぐりギフト", "#ギフト記録", "#プレゼント", (event_tag.present? ? "##{event_tag}" : nil)].compact.join(' ')
            ].join("\n") %>
          <% x_intent_url = "https://x.com/intent/tweet?text=#{CGI.escape(tweet_text)}&url=#{CGI.escape(gift_record_url(@gift_record))}" %>
          <div class="flex flex-wrap items-center gap-4 mt-4">
            <%= link_to back_link_path,
                 class: "inline-flex items-center text-primary hover:text-primary-hover font-medium" do %>
              <i class="fas fa-arrow-left mr-1"></i>
              一覧に戻る
            <% end %>
            <%= link_to x_intent_url,
                        target: '_blank',
                        rel: 'noopener',
                        data: { toggle: "tooltip", placement: "bottom" },
                        title: "Xでシェア",
                        class: "btn btn-primary gap-2 inline-flex items-center" do %>
              <i class="fa-brands fa-square-x-twitter text-lg"></i>
              Xでシェア
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- コメント機能 -->
  <div class="bg-white shadow-lg rounded-lg overflow-hidden mt-6">
    <div class="px-6 py-6" data-controller="comments">
      <%= render 'comments' %>
    </div>
  </div>

  <!-- 削除確認モーダル -->
  <%= render 'shared/delete_confirmation_modal' %>
  <!-- シェア確認モーダル（詳細ページでも使用） -->
  <%= render 'shared/share_confirmation_modal', share_gift_record: @gift_record %>
</div>
