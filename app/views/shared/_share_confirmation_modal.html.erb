<!-- ギフト記録シェア確認モーダル -->
<div id="share-confirmation-modal" 
     data-controller="share-manager"
     data-share-manager-dismiss-endpoint-value="/gift_records/dismiss_share"
     data-share-manager-target="modal"
     <% if defined?(@share_gift_record) && @share_gift_record.present? %>
       <% item_name = @share_gift_record.item_name.presence %>
       <% gift_person_name = @share_gift_record.gift_person&.name.presence %>
       <% relationship_name = @share_gift_record.gift_person&.relationship&.name.presence %>
       <% event_name = @share_gift_record.event&.name.presence %>
       <% memo = @share_gift_record.memo.presence %>
       <% if item_name %>data-share-manager-item-name-value="<%= h(item_name) %>"<% end %>
       <% if gift_person_name %> data-share-manager-gift-person-name-value="<%= h(gift_person_name) %>"<% end %>
       <% if relationship_name %> data-share-manager-relationship-name-value="<%= h(relationship_name) %>"<% end %>
       <% if event_name %> data-share-manager-event-name-value="<%= h(event_name) %>"<% end %>
       <% if memo %> data-share-manager-memo-value="<%= h(memo) %>"<% end %>
       <% if @share_gift_record.has_images? %>
         data-share-manager-has-image-value="true"
         data-share-manager-image-url-value="<%= url_for(@share_gift_record.main_image) %>"
       <% else %>
         data-share-manager-has-image-value="false"
       <% end %>
     <% end %>
     class="fixed inset-0 z-50 overflow-y-auto hidden" 
     aria-labelledby="share-modal-title" 
     role="dialog" 
     aria-modal="true">
  <!-- 背景オーバーレイ -->
  <div class="flex items-center justify-center min-h-screen p-4">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" 
         aria-hidden="true"
         data-action="click->share-manager#close"></div>

    <!-- モーダルコンテンツ -->
    <div class="inline-block bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all w-full max-w-lg">
      <!-- ヘッダー -->
      <div class="px-4 pt-5 pb-4 sm:p-6 sm:pb-4" style="background-color: #F6B352;">
        <div class="sm:flex sm:items-start">
          <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-white sm:mx-0 sm:h-10 sm:w-10">
            <i class="fab fa-x-twitter text-gray-800 text-lg"></i>
          </div>
          <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
            <h3 class="text-lg leading-6 font-medium text-gray-900" id="share-modal-title">
              ギフト記録をシェアしませんか？
            </h3>
            <div class="mt-2">
              <p class="text-sm text-gray-700">
                今作成したギフト記録をXでシェアして、みんなにギフトのアイデアを共有しましょう！
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- メインコンテンツ -->
      <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
        <!-- ギフト記録のプレビュー -->
        <div id="share-gift-preview" data-share-manager-target="preview" class="mb-4 p-4 bg-gray-50 rounded-lg border-2 border-dashed border-gray-300">
          <!-- JavaScriptで動的に内容が挿入される -->
        </div>

        <!-- シェア文のプレビュー -->
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 mb-2">
            <i class="fas fa-quote-left mr-1"></i>
            シェアする内容
          </label>
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-3">
            <p id="share-text-preview" data-share-manager-target="textPreview" class="text-sm text-gray-800">
              <!-- JavaScriptで動的に生成される -->
            </p>
            <div class="mt-2 text-xs text-gray-500">
              <i class="fas fa-info-circle mr-1"></i>
              文字数: <span id="share-text-length" data-share-manager-target="lengthCounter">0</span>/280
            </div>
          </div>
        </div>

        <!-- 注意事項 -->
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-3 mb-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <i class="fas fa-exclamation-triangle text-yellow-400"></i>
            </div>
            <div class="ml-3">
              <h3 class="text-xs font-medium text-yellow-800">
                シェアする前にご確認ください
              </h3>
              <div class="mt-1 text-xs text-yellow-700">
                <ul class="list-disc list-inside space-y-1">
                  <li>個人情報や機密情報が含まれていないかご確認ください</li>
                  <li>シェア設定が「公開」の記録のみシェアすることをお勧めします</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- フッター（ボタン） -->
      <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
        <button type="button" 
                data-action="click->share-manager#shareToX" 
                class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 text-sm font-medium text-white btn-primary hover:bg-primary-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary sm:ml-3 sm:w-auto transition-colors">
          <i class="fab fa-x-twitter mr-2"></i>
          Xでシェアする
        </button>
        <button type="button" 
                data-action="click->share-manager#close" 
                class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm transition-colors">
          今はしない
        </button>
      </div>
    </div>
  </div>
</div>
