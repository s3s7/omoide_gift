<!-- メインヒーロー画像セクション -->
<section
  class="relative z-[5] mt-[49px]
         ml-0 mr-0 w-full max-w-full
         sm:ml-[calc(-50vw+50%)] sm:mr-[calc(-50vw+50%)] sm:w-screen sm:max-w-[100vw]
         before:content-[''] before:absolute before:top-[-1px] before:left-0 before:right-0 before:h-px
         before:bg-[linear-gradient(90deg,transparent_0%,rgba(246,179,82,0.3)_50%,transparent_100%)]">
  <!-- 画像コンテナ -->
  <div
    class="overflow-hidden
           shadow-[0_25px_50px_-12px_rgba(0,0,0,0.25),0_0_0_1px_rgba(255,255,255,0.05),inset_0_1px_0_rgba(255,255,255,0.1)]
           h-[45dvh] min-h-[220px] max-h-[420px]
           md:h-[85vh] md:min-h-[650px] md:max-h-[900px]
           lg:h-[90dvh] lg:min-h-[750px] lg:max-h-[1300px]
           2xl:h-[95vh] 2xl:min-h-[800px] 2xl:max-h-[1500px]">
    <%= image_tag "top_image.webp", 
        alt: "めぐりギフト - 花束のギフトイメージ", 
        class: "w-full h-full object-cover [transition-property:transform,opacity] duration-500 ease-out opacity-0 scale-105 filter brightness-105 contrast-110 saturate-110",
        loading: "eager",
        onload: "this.style.opacity='1'; this.style.transform='scale(1)';" %>
  </div>
  
  <!-- グラデーションオーバーレイで視覚効果を追加 -->
  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-black opacity-20 pointer-events-none"></div>
</section>
