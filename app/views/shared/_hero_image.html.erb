<!-- メインヒーロー画像セクション -->
<section class="hero-image-section w-full relative">
  <!-- 画像コンテナ：ヘッダーにくっついて大幅に拡大表示 -->
  <div class="w-full overflow-hidden shadow-2xl hero-container" style="height: 90dvh;">
    <%= image_tag "Group 8.png", 
        alt: "めぐりギフト - 花束のギフトイメージ", 
        class: "w-full h-full object-cover transition-all duration-700 opacity-0 transform scale-105",
        loading: "eager",
        onload: "this.style.opacity='1'; this.style.transform='scale(1)';" %>
  </div>
  
  <!-- グラデーションオーバーレイで視覚効果を追加 -->
  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-black opacity-20 pointer-events-none"></div>
</section>

<style>
  /* ヒーロー画像専用スタイル */
  .hero-image-section {
    /* ヘッダーに完全にくっつける */
    position: relative;
    margin: 0;
    padding: 0;
    /* 全幅表示 */
    margin-left: calc(-50vw + 50%);
    margin-right: calc(-50vw + 50%);
    width: 100vw;
    max-width: 100vw;
    /* ヘッダーより低いz-index */
    z-index: 5;
    /* 上部の微調整でヘッダーにぴったりくっつける */
    margin-top: 49px;
  }
  
  .hero-image-section img {
    transition: transform 0.5s ease-out, opacity 0.7s ease;
    filter: brightness(1.05) contrast(1.1) saturate(1.1);
  }
  
  .hero-image-section img:hover {
    transform: scale(1.03);
    filter: brightness(1.1) contrast(1.15) saturate(1.15);
  }
  
  /* シャドウエフェクトの強化 */
  .hero-container {
    box-shadow: 
      0 25px 50px -12px rgba(0, 0, 0, 0.25),
      0 0 0 1px rgba(255, 255, 255, 0.05),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }
  
  /* レスポンシブ対応 */
  @media (max-width: 640px) {
    /* モバイルはヒーロー画像を小さめに */
    .hero-image-section .hero-container {
      height: 45dvh !important;
      min-height: 220px !important;
      max-height: 420px !important;
    }
    /* フルブリードのマージンハックを解除してはみ出しを防止 */
    .hero-image-section {
      margin-left: 0;
      margin-right: 0;
      width: 100%;
      max-width: 100%;
    }
  }
  
  @media (min-width: 641px) and (max-width: 1024px) {
    .hero-image-section .hero-container {
      height: 85vh !important;
      min-height: 650px !important;
      max-height: 900px !important;
    }
  }
  
  @media (min-width: 1025px) {
    .hero-image-section .hero-container {
      height: 90dvh !important;
      min-height: 750px !important;
      max-height: 1300px !important;
    }
  }
  
  /* 超大型画面での最適化 */
  @media (min-width: 1920px) {
    .hero-image-section .hero-container {
      height: 95vh !important;
      min-height: 800px !important;
      max-height: 1500px !important;
    }
  }
  
  /* ヘッダーとの境界を完全になくす */
  .hero-image-section::before {
    content: '';
    position: absolute;
    top: -1px;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, 
      transparent 0%, 
      rgba(246, 179, 82, 0.3) 50%, 
      transparent 100%);
    z-index: 1;
  }
</style>
