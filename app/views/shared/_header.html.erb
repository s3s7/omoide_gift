<header class="fixed top-0 left-0 right-0 shadow-md z-10" style="background-color: #F6B352;">
  <div class="container mx-auto px-4 py-3 flex justify-between items-center">
    <div class="text-xl font-bold text-gray-900">
      <%= link_to "思い出ギフトロゴ", root_path, class: "hover:text-gray-700 transition-colors duration-200" %>
    </div>
    
    
    <!-- ハンバーガーメニュー -->
    <div class="relative">
      <button id="menu-toggle" class="focus:outline-none p-2">
        <svg class="w-6 h-6 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
      <div id="menu" class="hidden absolute right-0 mt-2 w-48 bg-white shadow-lg rounded-md border" style="z-index: 9999;">

        <% if user_signed_in? %>
          <%= link_to "思い出を追加", new_gift_record_path, class: "block px-4 py-2 text-gray-800 hover:bg-gray-100" %>
          <%= link_to "ログアウト", destroy_user_session_path, 
              data: { 
                turbo_method: :delete,
                confirm: "ログアウトしますか？"
              }, 
              class: "block px-4 py-2 text-gray-800 hover:bg-gray-100" %>
        <% else %>
          <%= link_to "ログイン/新規登録", new_user_session_path, class: "block px-4 py-2 text-gray-800 hover:bg-gray-100" %>
        <% end %>
        <%= link_to "みんなのギフト", gift_records_path, class: "block px-4 py-2 text-gray-800 hover:bg-gray-100" %>
        
        <!-- Divider -->
        <div class="border-t border-gray-200 my-2"></div>
        
        <!-- Additional Pages -->
        <%= link_to "使い方", how_to_use_path, class: "block px-4 py-2 text-gray-800 hover:bg-gray-100" %>
        <%= link_to "利用規約", terms_path, class: "block px-4 py-2 text-gray-800 hover:bg-gray-100" %>
        <%= link_to "プライバシーポリシー", privacy_path, class: "block px-4 py-2 text-gray-800 hover:bg-gray-100" %>
        <%= link_to "お問い合わせ", contact_path, class: "block px-4 py-2 text-gray-800 hover:bg-gray-100" %>

      </div>
    </div>
  </div>
</header>
