<!-- コメント管理一覧 -->
<div class="space-y-6">
  <!-- ページヘッダー -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">
        <i class="fas fa-comments mr-3 text-blue-600"></i>
        コメント管理
      </h1>
      <p class="text-gray-600 mt-1">ユーザーが投稿したコメントの管理と削除</p>
    </div>
    
    <!-- 統計サマリー -->
    <div class="flex space-x-4 text-sm">
      <div class="text-center">
        <div class="font-bold text-lg text-blue-600"><%= @total_count %></div>
        <div class="text-gray-500">総コメント数</div>
      </div>
      <div class="text-center">
        <div class="font-bold text-lg text-green-600"><%= @today_count %></div>
        <div class="text-gray-500">今日の投稿</div>
      </div>
    </div>
  </div>

  <!-- 検索・フィルター -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <%= form_with url: admin_comments_path, method: :get, local: true, class: "space-y-4" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <!-- 検索キーワード -->
        <div>
          <%= f.label :search, "検索", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :search, 
              value: params[:search],
              placeholder: "コメント内容・ユーザー名",
              class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- 日付（開始） -->
        <div>
          <%= f.label :date_from, "期間（開始）", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :date_from, 
              value: params[:date_from],
              class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- 日付（終了） -->
        <div>
          <%= f.label :date_to, "期間（終了）", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :date_to, 
              value: params[:date_to],
              class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- 並び順 -->
        <div>
          <%= f.label :sort, "並び順", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :sort, 
              options_for_select([
                ["投稿日（新→古）", "created_at_desc"],
                ["投稿日（古→新）", "created_at_asc"],
                ["コメント内容", "body"],
                ["ユーザー名", "user_name"]
              ], params[:sort]),
              {},
              { class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
        </div>
      </div>

      <div class="flex items-center space-x-4">
        <%= f.submit "検索", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <%= link_to "リセット", admin_comments_path, 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        
        <!-- 表示件数設定 -->
        <div class="flex items-center space-x-2 ml-auto">
          <label class="text-sm text-gray-700">表示件数:</label>
          <%= f.select :per_page, 
              options_for_select([
                ["25件", 25],
                ["50件", 50],
                ["100件", 100]
              ], params[:per_page] || 25),
              {},
              { 
                class: "px-3 py-1 border border-gray-300 rounded text-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
                onchange: "this.form.submit();"
              } %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- コメント一覧テーブル -->
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              コメント内容
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              投稿者
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              対象ギフト記録
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              投稿日時
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              アクション
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @comments.each do |comment| %>
            <tr class="hover:bg-gray-50">
              <!-- コメント内容 -->
              <td class="px-6 py-4">
                <div class="max-w-xs">
                  <div class="text-sm text-gray-900 break-words">
                    <%= link_to comment.excerpt(80), admin_comment_path(comment), 
                        class: "hover:text-blue-600" %>
                  </div>
                  <% if comment.body.length > 80 %>
                    <div class="text-xs text-gray-500 mt-1">
                      （全<%= comment.body.length %>文字）
                    </div>
                  <% end %>
                </div>
              </td>

              <!-- 投稿者 -->
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 w-8 h-8">
                    <% if comment.user.has_avatar? %>
                      <%= image_tag display_avatar(comment.user, :small), 
                          class: "w-8 h-8 rounded-full object-cover" %>
                    <% else %>
                      <div class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center">
                        <i class="fas fa-user text-gray-400 text-sm"></i>
                      </div>
                    <% end %>
                  </div>
                  <div class="ml-3">
                    <div class="text-sm font-medium text-gray-900">
                      <%= link_to comment.user.name, admin_user_path(comment.user), 
                          class: "hover:text-blue-600" %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= comment.user.email %>
                    </div>
                  </div>
                </div>
              </td>

              <!-- 対象ギフト記録 -->
              <td class="px-6 py-4">
                <div class="max-w-xs">
                  <div class="text-sm font-medium text-gray-900">
                    <%= link_to comment.gift_record.display_item_name, admin_gift_record_path(comment.gift_record), 
                        class: "hover:text-purple-600" %>
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= comment.gift_record.user.name %> → <%= comment.gift_record.gift_person.name %>
                  </div>
                  <div class="text-xs text-gray-500">
                    <%= l(comment.gift_record.gift_at, format: :short) if comment.gift_record.gift_at %>
                  </div>
                </div>
              </td>

              <!-- 投稿日時 -->
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= l(comment.created_at, format: :short) %>
              </td>

              <!-- アクション -->
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                <%= link_to "詳細", admin_comment_path(comment), 
                    class: "text-blue-600 hover:text-blue-900" %>
                
                <%= link_to "編集", edit_admin_comment_path(comment), 
                    class: "text-green-600 hover:text-green-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- ページネーション -->
    <% if @comments.respond_to?(:current_page) && @comments.total_pages > 1 %>
      <div class="px-6 py-4 border-t border-gray-200">
        <nav class="flex items-center justify-between">
          <!-- 前のページボタン -->
          <div class="flex-1 flex justify-start">
            <% if @comments.prev_page %>
              <%= link_to admin_comments_path(request.query_parameters.merge(page: @comments.prev_page)),
                  class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 transition-colors" do %>
                <i class="fas fa-chevron-left mr-2"></i>
                前へ
              <% end %>
            <% else %>
              <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-400 bg-gray-100 cursor-not-allowed">
                <i class="fas fa-chevron-left mr-2"></i>
                前へ
              </span>
            <% end %>
          </div>

          <!-- ページ番号 -->
          <div class="hidden md:flex">
            <% start_page = [@comments.current_page - 2, 1].max %>
            <% end_page = [start_page + 4, @comments.total_pages].min %>
            <% start_page = [end_page - 4, 1].max if end_page - start_page < 4 %>

            <!-- ページ番号範囲 -->
            <% (start_page..end_page).each do |page_num| %>
              <% if page_num == @comments.current_page %>
                <span aria-current="page" class="relative inline-flex items-center px-3 py-2 border border-blue-500 bg-blue-50 text-sm font-medium text-blue-600">
                  <%= page_num %>
                </span>
              <% else %>
                <%= link_to admin_comments_path(request.query_parameters.merge(page: page_num)),
                    class: "relative inline-flex items-center px-3 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
                  <%= page_num %>
                <% end %>
              <% end %>
            <% end %>
          </div>

          <!-- 次のページボタン -->
          <div class="flex-1 flex justify-end">
            <% if @comments.next_page %>
              <%= link_to admin_comments_path(request.query_parameters.merge(page: @comments.next_page)),
                  class: "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 transition-colors" do %>
                次へ
                <i class="fas fa-chevron-right ml-2"></i>
              <% end %>
            <% else %>
              <span class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-400 bg-gray-100 cursor-not-allowed">
                次へ
                <i class="fas fa-chevron-right ml-2"></i>
              </span>
            <% end %>
          </div>
        </nav>

        <!-- ページ情報 -->
        <div class="mt-3 text-center text-sm text-gray-700">
          <%= @comments.current_page %>/<%= @comments.total_pages %>ページ 
          （全<%= @comments.total_count %>件中 
          <%= (@comments.current_page - 1) * @comments.limit_value + 1 %>-<%= [@comments.current_page * @comments.limit_value, @comments.total_count].min %>件を表示）
        </div>
      </div>
    <% end %>
  </div>

  <!-- 空の状態表示 -->
  <% if @comments.empty? %>
    <div class="bg-white rounded-lg shadow-md p-12 text-center">
      <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <i class="fas fa-comments text-2xl text-gray-400"></i>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">コメントが見つかりません</h3>
      <p class="text-gray-500">検索条件を変更してお試しください。</p>
    </div>
  <% end %>
</div>
