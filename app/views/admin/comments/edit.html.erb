<!-- コメント編集画面 -->
<div class="space-y-6">
  <!-- ページヘッダー -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">
        <i class="fas fa-edit mr-3 text-blue-600"></i>
        コメントの編集
      </h1>
      <p class="text-gray-600 mt-1">投稿されたコメントの内容を編集します</p>
    </div>
    
    <!-- ナビゲーションボタン -->
    <div class="flex space-x-3">
      <%= link_to admin_comment_path(@comment),
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
        <i class="fas fa-arrow-left mr-2"></i>
        詳細に戻る
      <% end %>
      
      <%= link_to admin_comments_path,
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
        <i class="fas fa-list mr-2"></i>
        一覧に戻る
      <% end %>
    </div>
  </div>

  <!-- 現在のコメント情報表示 -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">現在のコメント情報</h3>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <div>
        <div class="space-y-3">
          <div class="flex justify-between py-2 border-b border-gray-100">
            <span class="text-sm font-medium text-gray-500">投稿者</span>
            <span class="text-sm text-gray-900">
              <%= link_to @comment.user.name, admin_user_path(@comment.user), 
                  class: "text-blue-600 hover:text-blue-800" %>
            </span>
          </div>
          <div class="flex justify-between py-2 border-b border-gray-100">
            <span class="text-sm font-medium text-gray-500">対象ギフト記録</span>
            <span class="text-sm text-gray-900">
              <%= link_to @comment.gift_record.display_item_name, admin_gift_record_path(@comment.gift_record), 
                  class: "text-purple-600 hover:text-purple-800" %>
            </span>
          </div>
          <div class="flex justify-between py-2 border-b border-gray-100">
            <span class="text-sm font-medium text-gray-500">文字数</span>
            <span class="text-sm text-gray-900">
              <%= @comment.body.length %>/100文字
            </span>
          </div>
        </div>
      </div>
      <div>
        <div class="space-y-3">
          <div class="flex justify-between py-2 border-b border-gray-100">
            <span class="text-sm font-medium text-gray-500">投稿日時</span>
            <span class="text-sm text-gray-900">
              <%= l(@comment.created_at, format: :short) %>
            </span>
          </div>
          <div class="flex justify-between py-2 border-b border-gray-100">
            <span class="text-sm font-medium text-gray-500">最終更新</span>
            <span class="text-sm text-gray-900">
              <%= l(@comment.updated_at, format: :short) %>
            </span>
          </div>
          <div class="flex justify-between py-2 border-b border-gray-100">
            <span class="text-sm font-medium text-gray-500">コメントID</span>
            <span class="text-sm text-gray-900 font-mono">
              #<%= @comment.id %>
            </span>
          </div>
        </div>
      </div>
    </div>

    <!-- 現在のコメント内容 -->
    <div class="mt-6 pt-4 border-t border-gray-200">
      <h4 class="text-sm font-medium text-gray-700 mb-2">現在のコメント内容</h4>
      <div class="bg-gray-50 rounded-lg p-4 border-l-4 border-blue-500">
        <div class="flex items-start space-x-3">
          <div class="flex-shrink-0">
            <i class="fas fa-quote-left text-blue-500 text-lg mt-1"></i>
          </div>
          <div class="flex-1">
            <p class="text-gray-900 whitespace-pre-wrap"><%= @comment.body %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 編集フォーム -->
  <div class="bg-white rounded-lg shadow-md">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">コメント内容の編集</h3>
      <p class="text-sm text-gray-500 mt-1">不適切な内容の修正や誤字脱字の訂正を行えます</p>
    </div>

    <div class="px-6 py-6">
      <%= form_with model: [ :admin, @comment ], local: true, class: "space-y-6" do |f| %>
        
        <!-- エラーメッセージ -->
        <% if @comment.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <i class="fas fa-exclamation-triangle text-red-400"></i>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  入力エラーがあります（<%= pluralize(@comment.errors.count, "件") %>）
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @comment.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- コメント内容フィールド -->
        <div data-controller="character-counter">
          <%= f.label :body, "コメント内容", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_area :body, 
              rows: 6,
              class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 #{@comment.errors[:body].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : ''}",
              placeholder: "コメント内容を入力してください...",
              required: true,
              maxlength: 100,
              data: {
                character_counter_target: "input",
                action: "input->character-counter#inputChanged"
              } %>
          
          <!-- 文字数カウンタ -->
          <div class="mt-1 flex justify-between items-center">
            <div class="text-xs text-gray-400">
              <span data-character-counter-target="counter"><%= @comment.body.length %></span>/100文字
            </div>
            <div class="text-xs text-gray-500">
              <i class="fas fa-info-circle mr-1"></i>
              改行も文字数に含まれます
            </div>
          </div>
          
          <!-- ヘルプテキスト -->
          <div class="mt-2 text-sm text-gray-500">
            <i class="fas fa-info-circle mr-1"></i>
            不適切な表現の修正や誤字脱字の訂正を行ってください
          </div>
          
          <!-- フィールド固有のエラーメッセージ -->
          <% if @comment.errors[:body].any? %>
            <div class="mt-2 text-sm text-red-600">
              <i class="fas fa-exclamation-triangle mr-1"></i>
              <%= @comment.errors[:body].first %>
            </div>
          <% end %>
        </div>

        <!-- 編集履歴注意 -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <i class="fas fa-info-circle text-blue-400"></i>
            </div>
            <div class="ml-3">
              <h4 class="text-sm font-medium text-blue-800">編集について</h4>
              <div class="mt-2 text-sm text-blue-700">
                <ul class="list-disc pl-5 space-y-1">
                  <li>管理者による編集は最低限の修正に留めてください</li>
                  <li>コメントの意味を大きく変えることは避けてください</li>
                  <li>編集後は「更新日時」が変更されます</li>
                  <li>編集内容は投稿者には通知されません</li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- アクションボタン -->
        <div class="flex items-center justify-end space-x-3 pt-6 border-t border-gray-200">
          <%= link_to "キャンセル", admin_comment_path(@comment),
              class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          
          <%= f.submit "変更を保存",
              class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed",
              data: { disable_with: "保存中..." } %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 関連情報 -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- 投稿者情報 -->
    <div class="bg-white rounded-lg shadow-md">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">投稿者情報</h3>
      </div>
      
      <div class="px-6 py-6">
        <div class="flex items-center space-x-4">
          <div class="flex-shrink-0">
            <% if @comment.user.has_avatar? %>
              <%= image_tag @comment.user.display_avatar(:medium), 
                  class: "w-12 h-12 rounded-full object-cover border-2 border-blue-200" %>
            <% else %>
              <div class="w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center border-2 border-blue-200">
                <i class="fas fa-user text-xl text-blue-600"></i>
              </div>
            <% end %>
          </div>
          <div class="flex-1">
            <h4 class="text-lg font-semibold text-gray-900">
              <%= link_to @comment.user.name, admin_user_path(@comment.user), 
                  class: "text-blue-600 hover:text-blue-800" %>
            </h4>
            <p class="text-gray-500 text-sm"><%= @comment.user.email %></p>
            <% if @comment.user.admin? %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800 mt-1">
                <i class="fas fa-crown mr-1"></i>
                管理者
              </span>
            <% end %>
          </div>
        </div>

        <!-- ユーザー統計 -->
        <div class="mt-4 pt-4 border-t border-gray-200">
          <div class="grid grid-cols-2 gap-4 text-center">
            <div>
              <div class="text-lg font-bold text-blue-600">
                <%= @comment.user.comments.count %>
              </div>
              <div class="text-xs text-gray-500">総コメント数</div>
            </div>
            <div>
              <div class="text-lg font-bold text-purple-600">
                <%= @comment.user.gift_records.count %>
              </div>
              <div class="text-xs text-gray-500">ギフト記録数</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- 対象ギフト記録情報 -->
    <div class="bg-white rounded-lg shadow-md">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">対象ギフト記録</h3>
      </div>
      
      <div class="px-6 py-6">
        <div class="flex items-start space-x-4">
          <div class="flex-shrink-0">
            <% if @comment.gift_record.images.attached? && @comment.gift_record.images.first %>
              <%= image_tag @comment.gift_record.images.first.variant(resize_to_fill: [80, 80, { gravity: "center" }]), 
                  class: "w-20 h-20 rounded-lg object-cover border-2 border-purple-200" %>
            <% else %>
              <div class="w-20 h-20 rounded-lg bg-purple-100 flex items-center justify-center border-2 border-purple-200">
                <i class="fas fa-gift text-2xl text-purple-600"></i>
              </div>
            <% end %>
          </div>
          
          <div class="flex-1 min-w-0">
            <h4 class="text-lg font-bold text-gray-900 mb-2">
              <%= link_to @comment.gift_record.display_item_name, admin_gift_record_path(@comment.gift_record), 
                  class: "text-purple-600 hover:text-purple-800" %>
            </h4>
            
            <div class="space-y-2 text-sm">
              <div>
                <span class="text-gray-500">記録者:</span>
                <span class="text-gray-900 font-medium">
                  <%= @comment.gift_record.user.name %>
                </span>
              </div>
              <div>
                <span class="text-gray-500">ギフト相手:</span>
                <span class="text-gray-900 font-medium">
                  <%= @comment.gift_record.gift_person&.name || "未設定" %>
                </span>
              </div>
              <div>
                <span class="text-gray-500">ギフト日:</span>
                <span class="text-gray-900 font-medium">
                  <%= @comment.gift_record.gift_at ? l(@comment.gift_record.gift_at, format: :short) : "未設定" %>
                </span>
              </div>
            </div>

            <!-- 統計情報 -->
            <div class="mt-4 pt-4 border-t border-gray-200">
              <div class="flex space-x-4 text-sm">
                <div class="flex items-center">
                  <i class="fas fa-heart mr-1 text-red-500"></i>
                  <span class="text-gray-900 font-medium"><%= @comment.gift_record.favorites.count %></span>
                </div>
                <div class="flex items-center">
                  <i class="fas fa-comment mr-1 text-blue-500"></i>
                  <span class="text-gray-900 font-medium"><%= @comment.gift_record.comments.count %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 注意事項 -->
  <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <i class="fas fa-exclamation-triangle text-yellow-400"></i>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-yellow-800">
          編集時の注意事項
        </h3>
        <div class="mt-2 text-sm text-yellow-700">
          <ul class="list-disc pl-5 space-y-1">
            <li>コメントの編集は最低限の修正に留めてください</li>
            <li>不適切な表現の修正や誤字脱字の訂正が主な目的です</li>
            <li>コメントの意味を大幅に変更することは避けてください</li>
            <li>投稿者への編集通知機能はありません</li>
            <li>編集履歴は自動で記録されます（updated_at）</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

