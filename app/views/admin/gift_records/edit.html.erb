<!-- ギフト記録編集画面 -->
<div class="space-y-6">
  <!-- ページヘッダー -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">
        <i class="fas fa-edit mr-3 text-blue-600"></i>
        ギフト記録の編集
      </h1>
      <p class="text-gray-600 mt-1">「<%= @gift_record.display_item_name %>」の情報を編集します</p>
    </div>
    
    <!-- ナビゲーションボタン -->
    <div class="flex space-x-3">
      <%= link_to admin_gift_record_path(@gift_record),
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
        <i class="fas fa-arrow-left mr-2"></i>
        詳細に戻る
      <% end %>
      
      <%= link_to admin_gift_records_path,
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
        <i class="fas fa-list mr-2"></i>
        一覧に戻る
      <% end %>
    </div>
  </div>

  <!-- 現在の記録情報表示 -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">現在の記録情報</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <div class="space-y-3">
          <div class="flex justify-between py-2 border-b border-gray-100">
            <span class="text-sm font-medium text-gray-500">所有者</span>
            <span class="text-sm text-gray-900">
              <%= link_to @gift_record.user.name, admin_user_path(@gift_record.user), 
                  class: "text-blue-600 hover:text-blue-800" %>
            </span>
          </div>
          <div class="flex justify-between py-2 border-b border-gray-100">
            <span class="text-sm font-medium text-gray-500">ギフト相手</span>
            <span class="text-sm text-gray-900">
              <%= @gift_record.gift_person&.name || "未設定" %>
            </span>
          </div>
          <div class="flex justify-between py-2 border-b border-gray-100">
            <span class="text-sm font-medium text-gray-500">イベント</span>
            <span class="text-sm text-gray-900">
              <%= @gift_record.event&.name || "未設定" %>
            </span>
          </div>
        </div>
      </div>
      <div>
        <div class="space-y-3">
          <div class="flex justify-between py-2 border-b border-gray-100">
            <span class="text-sm font-medium text-gray-500">ギフト日</span>
            <span class="text-sm text-gray-900">
              <%= @gift_record.gift_at ? l(@gift_record.gift_at, format: :long) : "未設定" %>
            </span>
          </div>
          <div class="flex justify-between py-2 border-b border-gray-100">
            <span class="text-sm font-medium text-gray-500">カテゴリ</span>
            <span class="text-sm text-gray-900">
              <%= @gift_record.gift_item_category&.name || "未設定" %>
            </span>
          </div>
          <div class="flex justify-between py-2 border-b border-gray-100">
            <span class="text-sm font-medium text-gray-500">作成日</span>
            <span class="text-sm text-gray-900">
              <%= l(@gift_record.created_at, format: :short) %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 編集フォーム -->
  <div class="bg-white rounded-lg shadow-md">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">編集可能な項目</h3>
      <p class="text-sm text-gray-500 mt-1">管理者として編集可能な項目のみ表示されています</p>
    </div>

    <div class="px-6 py-6">
      <%= form_with model: [ :admin, @gift_record ], local: true, class: "space-y-6" do |f| %>
        
        <!-- エラーメッセージ -->
        <% if @gift_record.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <i class="fas fa-exclamation-triangle text-red-400"></i>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  入力エラーがあります（<%= pluralize(@gift_record.errors.count, "件") %>）
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @gift_record.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- アイテム名フィールド -->
        <div>
          <%= f.label :item_name, "ギフトアイテム名", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :item_name, 
              class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 #{@gift_record.errors[:item_name].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : ''}",
              placeholder: "ギフトのアイテム名を入力",
              required: true,
              maxlength: 255 %>
          
          <!-- ヘルプテキスト -->
          <div class="mt-2 text-sm text-gray-500">
            <i class="fas fa-info-circle mr-1"></i>
            ギフトとして贈った/貰ったアイテムの名前です
          </div>
          
          <!-- フィールド固有のエラーメッセージ -->
          <% if @gift_record.errors[:item_name].any? %>
            <div class="mt-2 text-sm text-red-600">
              <i class="fas fa-exclamation-triangle mr-1"></i>
              <%= @gift_record.errors[:item_name].first %>
            </div>
          <% end %>
        </div>

        <!-- メモフィールド -->
        <div>
          <%= f.label :memo, "メモ", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_area :memo, 
              rows: 4,
              class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 #{@gift_record.errors[:memo].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : ''}",
              placeholder: "このギフトに関するメモや思い出を記録...",
              maxlength: 300 %>
          
          <!-- 文字数カウンタ -->
          <div class="mt-1 text-xs text-gray-400 text-right">
            <span id="memo-count">0</span>/300文字
          </div>
          
          <!-- ヘルプテキスト -->
          <div class="mt-2 text-sm text-gray-500">
            <i class="fas fa-info-circle mr-1"></i>
            このギフトに関する思い出やエピソードを記録できます（任意）
          </div>
          
          <!-- フィールド固有のエラーメッセージ -->
          <% if @gift_record.errors[:memo].any? %>
            <div class="mt-2 text-sm text-red-600">
              <i class="fas fa-exclamation-triangle mr-1"></i>
              <%= @gift_record.errors[:memo].first %>
            </div>
          <% end %>
        </div>

        <!-- 公開設定フィールド -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-3">公開設定</label>
          <div class="space-y-3">
            <div class="flex items-center">
              <%= f.radio_button :is_public, true, 
                  class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300" %>
              <%= f.label :is_public_true, class: "ml-3 block text-sm font-medium text-gray-700" do %>
                <span class="font-medium">公開</span>
                <span class="text-gray-500">- 他のユーザーがこの記録を閲覧できます</span>
              <% end %>
            </div>
            <div class="flex items-center">
              <%= f.radio_button :is_public, false, 
                  class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300" %>
              <%= f.label :is_public_false, class: "ml-3 block text-sm font-medium text-gray-700" do %>
                <span class="font-medium">非公開</span>
                <span class="text-gray-500">- 所有者のみがこの記録を閲覧できます</span>
              <% end %>
            </div>
          </div>
          
          <!-- フィールド固有のエラーメッセージ -->
          <% if @gift_record.errors[:is_public].any? %>
            <div class="mt-2 text-sm text-red-600">
              <i class="fas fa-exclamation-triangle mr-1"></i>
              <%= @gift_record.errors[:is_public].first %>
            </div>
          <% end %>
        </div>

        <!-- ギフト分類設定フィールド -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-3">ギフト分類</label>
          
          <div class="flex items-center space-x-4">
            <!-- daisyUI トグルスイッチ -->
            <%= f.check_box :gift_direction, 
                {
                  checked: default_gift_direction_checked?(@gift_record, :received),
                  class: "toggle toggle-success",
                  data: { 
                    controller: "gift-records",
                    "gift-records-target": "giftDirectionToggle" 
                  }
                }, "received", "given" %>
            
            <div class="flex items-center space-x-2">
              <i class="<%= gift_direction_icon_class(@gift_record) %>" 
                 style="color: <%= gift_direction_color(@gift_record) %>"
                 data-gift-records-target="giftDirectionToggleIcon"></i>
              <span class="text-sm font-medium text-gray-700"
                    data-gift-records-target="giftDirectionToggleStatus">
                <%= gift_direction_display_text(@gift_record) %>
              </span>
            </div>
          </div>
          
          <div class="mt-2 text-sm text-gray-500"
               data-gift-records-target="giftDirectionToggleDescription">
            <i class="fas fa-info-circle mr-1"></i>
            <%= gift_direction_description_text(@gift_record) %>
          </div>
          
          <!-- フィールド固有のエラーメッセージ -->
          <% if @gift_record.errors[:gift_direction].any? %>
            <div class="mt-2 text-sm text-red-600">
              <i class="fas fa-exclamation-triangle mr-1"></i>
              <%= @gift_record.errors[:gift_direction].first %>
            </div>
          <% end %>
        </div>

        <!-- 編集不可能な情報の表示 -->
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
          <h4 class="text-sm font-medium text-gray-900 mb-3">編集できない情報</h4>
          <div class="text-sm text-gray-600">
            <p class="mb-2">
              <i class="fas fa-info-circle mr-1"></i>
              以下の情報は所有者のみが変更できるため、管理者画面では編集できません：
            </p>
            <ul class="list-disc pl-5 space-y-1">
              <li>ギフト日（gift_at）</li>
              <li>ギフト相手（gift_person）</li>
              <li>イベント（event）</li>
              <li>カテゴリ（gift_item_category）</li>
              <li>画像（images）</li>
            </ul>
            <p class="mt-2 text-xs">
              これらの変更が必要な場合は、所有者に直接変更を依頼してください。
            </p>
          </div>
        </div>

        <!-- アクションボタン -->
        <div class="flex items-center justify-end space-x-3 pt-6 border-t border-gray-200">
          <%= link_to "キャンセル", admin_gift_record_path(@gift_record),
              class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          
          <%= f.submit "変更を保存",
              class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed",
              data: { disable_with: "保存中..." } %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 注意事項 -->
  <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <i class="fas fa-exclamation-triangle text-yellow-400"></i>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-yellow-800">
          編集時の注意事項
        </h3>
        <div class="mt-2 text-sm text-yellow-700">
          <ul class="list-disc pl-5 space-y-1">
            <li>管理者による編集は最低限の項目に限定されています</li>
            <li>公開設定の変更は、記録の見え方に大きく影響します</li>
            <li>変更内容は即座に反映され、所有者にも影響します</li>
            <li>不適切な内容の修正や削除が主な用途です</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- 文字数カウンタのJavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  const memoTextarea = document.querySelector('#gift_record_memo');
  const memoCount = document.querySelector('#memo-count');
  
  if (memoTextarea && memoCount) {
    function updateCounter() {
      memoCount.textContent = memoTextarea.value.length;
    }
    
    memoTextarea.addEventListener('input', updateCounter);
    updateCounter(); // 初期値設定
  }
});
</script>
