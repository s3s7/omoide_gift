<!-- ユーザー編集画面 -->
<div class="space-y-6">
  <!-- ページヘッダー -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">
        <i class="fas fa-user-edit mr-3 text-blue-600"></i>
        ユーザー情報の編集
      </h1>
      <p class="text-gray-600 mt-1"><%= @user.name %>さんの基本情報を編集します</p>
    </div>
    
    <!-- 戻るボタン -->
    <div class="flex space-x-3">
      <%= link_to admin_user_path(@user),
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
        <i class="fas fa-arrow-left mr-2"></i>
        詳細に戻る
      <% end %>
      
      <%= link_to admin_users_path,
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
        <i class="fas fa-list mr-2"></i>
        一覧に戻る
      <% end %>
    </div>
  </div>

  <!-- 現在のユーザー情報表示 -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">現在の情報</h3>
    <div class="flex items-center space-x-4 mb-6">
      <div class="flex-shrink-0">
        <div class="w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center">
          <i class="fas fa-user text-xl text-blue-600"></i>
        </div>
      </div>
      <div>
        <h4 class="text-lg font-semibold text-gray-900"><%= @user.name %></h4>
        <p class="text-gray-500"><%= @user.email %></p>
        <% if @user.admin? %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
            <i class="fas fa-crown mr-1"></i>
            管理者
          </span>
        <% else %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
            <i class="fas fa-user mr-1"></i>
            一般ユーザー
          </span>
        <% end %>
      </div>
    </div>
  </div>

  <!-- 編集フォーム -->
  <div class="bg-white rounded-lg shadow-md">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">基本情報の編集</h3>
      <p class="text-sm text-gray-500 mt-1">ユーザーの名前とメールアドレスを変更できます</p>
    </div>

    <div class="px-6 py-6">
      <%= form_with model: [ :admin, @user ], local: true, class: "space-y-6" do |f| %>
        
        <!-- エラーメッセージ -->
        <% if @user.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <i class="fas fa-exclamation-triangle text-red-400"></i>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  入力エラーがあります（<%= pluralize(@user.errors.count, "件") %>）
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- 名前フィールド -->
        <div>
          <%= f.label :name, "名前", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :name, 
              class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 #{@user.errors[:name].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : ''}",
              placeholder: "ユーザーの表示名を入力",
              required: true,
              maxlength: 255 %>
          
          <!-- ヘルプテキスト -->
          <div class="mt-2 text-sm text-gray-500">
            <i class="fas fa-info-circle mr-1"></i>
            アプリケーション内で表示される名前です
          </div>
          
          <!-- フィールド固有のエラーメッセージ -->
          <% if @user.errors[:name].any? %>
            <div class="mt-2 text-sm text-red-600">
              <i class="fas fa-exclamation-triangle mr-1"></i>
              <%= @user.errors[:name].first %>
            </div>
          <% end %>
        </div>

        <!-- メールアドレスフィールド -->
        <div>
          <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, 
              class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 #{@user.errors[:email].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : ''}",
              placeholder: "user@example.com",
              required: true %>
          
          <!-- ヘルプテキスト -->
          <div class="mt-2 text-sm text-gray-500">
            <i class="fas fa-info-circle mr-1"></i>
            ログインや通知に使用されるメールアドレスです
          </div>
          
          <!-- フィールド固有のエラーメッセージ -->
          <% if @user.errors[:email].any? %>
            <div class="mt-2 text-sm text-red-600">
              <i class="fas fa-exclamation-triangle mr-1"></i>
              <%= @user.errors[:email].first %>
            </div>
          <% end %>
        </div>

        <!-- 読み取り専用情報 -->
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
          <h4 class="text-sm font-medium text-gray-900 mb-3">変更できない情報</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
            <div>
              <span class="text-gray-500">ユーザーID:</span>
              <span class="text-gray-900 font-medium ml-2">#<%= @user.id %></span>
            </div>
            <div>
              <span class="text-gray-500">権限:</span>
              <span class="text-gray-900 font-medium ml-2">
                <%= @user.admin? ? "管理者" : "一般ユーザー" %>
              </span>
            </div>
            <div>
              <span class="text-gray-500">登録方法:</span>
              <span class="text-gray-900 font-medium ml-2">
                <%= @user.provider.present? ? "LINE連携" : "メール登録" %>
              </span>
            </div>
            <div>
              <span class="text-gray-500">登録日:</span>
              <span class="text-gray-900 font-medium ml-2">
                <%= l(@user.created_at, format: :short) %>
              </span>
            </div>
          </div>
          <div class="mt-3 text-xs text-gray-500">
            <i class="fas fa-info-circle mr-1"></i>
            権限の変更は詳細画面から行ってください
          </div>
        </div>

        <!-- アクションボタン -->
        <div class="flex items-center justify-end space-x-3 pt-6 border-t border-gray-200">
          <%= link_to "キャンセル", admin_user_path(@user),
              class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          
          <%= f.submit "変更を保存",
              class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed",
              data: { disable_with: "保存中..." } %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 注意事項 -->
  <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <i class="fas fa-exclamation-triangle text-yellow-400"></i>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-yellow-800">
          編集時の注意事項
        </h3>
        <div class="mt-2 text-sm text-yellow-700">
          <ul class="list-disc pl-5 space-y-1">
            <li>メールアドレスを変更すると、ユーザーのログインに影響する場合があります</li>
            <li>既に使用されているメールアドレスは設定できません</li>
            <li>権限の変更は詳細画面から専用のボタンで行ってください</li>
            <li>変更内容は即座に反映されます</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>