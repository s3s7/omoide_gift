<!-- ユーザー詳細管理画面 -->
<div class="space-y-6">
  <!-- ページヘッダー -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">
        <i class="fas fa-user mr-3 text-blue-600"></i>
        ユーザー詳細
      </h1>
      <p class="text-gray-600 mt-1"><%= @user.name %>さんのプロフィールと活動状況</p>
    </div>
    
    <!-- 戻るボタン -->
    <div>
      <%= link_to admin_users_path,
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
        <i class="fas fa-arrow-left mr-2"></i>
        ユーザー一覧に戻る
      <% end %>
    </div>
  </div>

  <!-- ユーザー基本情報カード -->
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">基本情報</h3>
    </div>
    
    <div class="px-6 py-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- プロフィール情報 -->
        <div class="space-y-4">
          <div class="flex items-center space-x-4">
            <div class="flex-shrink-0">
              <div class="w-16 h-16 rounded-full bg-blue-100 flex items-center justify-center">
                <i class="fas fa-user text-2xl text-blue-600"></i>
              </div>
            </div>
            <div class="flex-1">
              <h4 class="text-xl font-semibold text-gray-900"><%= @user.name %></h4>
              <p class="text-gray-500"><%= @user.email %></p>
              <!-- 権限バッジ -->
              <% if @user.admin? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  <i class="fas fa-crown mr-1"></i>
                  管理者
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <i class="fas fa-user mr-1"></i>
                  一般ユーザー
                </span>
              <% end %>
            </div>
          </div>

          <!-- 登録情報 -->
          <div class="grid grid-cols-1 gap-3">
            <div class="flex justify-between py-2 border-b border-gray-100">
              <span class="text-sm font-medium text-gray-500">ユーザーID</span>
              <span class="text-sm text-gray-900">#<%= @user.id %></span>
            </div>
            <div class="flex justify-between py-2 border-b border-gray-100">
              <span class="text-sm font-medium text-gray-500">登録方法</span>
              <span class="text-sm text-gray-900">
                <% if @user.provider.present? %>
                  <i class="fab fa-line text-green-500 mr-1"></i>
                  LINE連携
                <% else %>
                  <i class="fas fa-envelope text-blue-500 mr-1"></i>
                  メール登録
                <% end %>
              </span>
            </div>
            <div class="flex justify-between py-2 border-b border-gray-100">
              <span class="text-sm font-medium text-gray-500">登録日時</span>
              <span class="text-sm text-gray-900"><%= l(@user.created_at, format: :long) %></span>
            </div>
            <div class="flex justify-between py-2">
              <span class="text-sm font-medium text-gray-500">最終更新</span>
              <span class="text-sm text-gray-900"><%= l(@user.updated_at, format: :long) %></span>
            </div>
          </div>
        </div>

        <!-- アクションボタン -->
        <div class="space-y-4">
          <h4 class="text-lg font-medium text-gray-900">管理アクション</h4>
          
          <div class="space-y-3">
            <!-- 編集ボタン -->
            <%= link_to edit_admin_user_path(@user),
                class: "w-full inline-flex items-center justify-center px-4 py-3 border border-blue-300 rounded-md shadow-sm text-sm font-medium text-blue-700 bg-blue-50 hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
              <i class="fas fa-edit mr-2"></i>
              基本情報を編集
            <% end %>

            <!-- 権限変更ボタン -->
            <% if @user != current_user %>
              <%= button_to toggle_role_admin_user_path(@user),
                  method: :patch,
                  data: { 
                    confirm: @user.admin? ? 
                      "#{@user.name}さんの管理者権限を削除しますか？" : 
                      "#{@user.name}さんに管理者権限を付与しますか？"
                  },
                  class: "w-full inline-flex items-center justify-center px-4 py-3 border border-orange-300 rounded-md shadow-sm text-sm font-medium text-orange-700 bg-orange-50 hover:bg-orange-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500" do %>
                <% if @user.admin? %>
                  <i class="fas fa-user-minus mr-2"></i>
                  管理者権限を削除
                <% else %>
                  <i class="fas fa-user-plus mr-2"></i>
                  管理者権限を付与
                <% end %>
              <% end %>
            <% else %>
              <div class="w-full inline-flex items-center justify-center px-4 py-3 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-400 bg-gray-50 cursor-not-allowed">
                <i class="fas fa-ban mr-2"></i>
                自分の権限は変更不可
              </div>
            <% end %>
          </div>

          <!-- 警告メッセージ -->
          <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-3">
            <div class="text-sm text-yellow-800">
              <i class="fas fa-exclamation-triangle mr-1"></i>
              <strong>注意:</strong> 権限変更は慎重に行ってください。
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 活動統計カード -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <!-- ギフト記録統計 -->
    <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-green-500">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <i class="fas fa-gift text-2xl text-green-600"></i>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">
              ギフト記録
            </dt>
            <dd class="text-2xl font-bold text-gray-900">
              <%= @user_statistics[:gift_records_count] %>件
            </dd>
            <dd class="text-sm text-gray-500">
              公開: <%= @user_statistics[:public_gift_records_count] %>件
            </dd>
          </dl>
        </div>
      </div>
    </div>

    <!-- ギフト相手統計 -->
    <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-blue-500">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <i class="fas fa-users text-2xl text-blue-600"></i>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">
              ギフト相手
            </dt>
            <dd class="text-2xl font-bold text-gray-900">
              <%= @user_statistics[:gift_people_count] %>人
            </dd>
          </dl>
        </div>
      </div>
    </div>

    <!-- エンゲージメント統計 -->
    <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-purple-500">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <i class="fas fa-heart text-2xl text-purple-600"></i>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">
              エンゲージメント
            </dt>
            <dd class="text-lg font-bold text-gray-900">
              <div class="grid grid-cols-3 gap-1 text-xs">
                <div>❤️<%= @user_statistics[:favorites_count] %></div>
                <div>💬<%= @user_statistics[:comments_count] %></div>
                <div>🔔<%= @user_statistics[:reminds_count] %></div>
              </div>
            </dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <!-- 最近の活動 -->
  <div class="bg-white rounded-lg shadow-md">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">
        <i class="fas fa-clock mr-2 text-gray-500"></i>
        最近のギフト記録
      </h3>
    </div>
    
    <div class="px-6 py-4">
      <% if @user_statistics[:recent_activity].any? %>
        <div class="space-y-4">
          <% @user_statistics[:recent_activity].each do |gift_record| %>
            <div class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
              <div class="flex-shrink-0">
                <% if gift_record.images.attached? && gift_record.images.first %>
                  <%= image_tag gift_record.images.first.variant(resize_to_fill: [48, 48, { gravity: "center" }]), 
                      class: "w-12 h-12 rounded-lg object-cover" %>
                <% else %>
                  <div class="w-12 h-12 rounded-lg bg-gray-300 flex items-center justify-center">
                    <i class="fas fa-gift text-gray-600"></i>
                  </div>
                <% end %>
              </div>
              
              <div class="ml-4 flex-1 min-w-0">
                <div class="flex items-center justify-between">
                  <h4 class="text-sm font-medium text-gray-900 truncate">
                    <%= gift_record.gift_name %>
                  </h4>
                  <div class="flex items-center space-x-2">
                    <% if gift_record.is_public? %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                        公開
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                        非公開
                      </span>
                    <% end %>
                  </div>
                </div>
                <div class="mt-1 flex items-center text-sm text-gray-500">
                  <span>
                    <i class="fas fa-user mr-1"></i>
                    <%= gift_record.gift_person&.name || "未設定" %>
                  </span>
                  <span class="mx-2">•</span>
                  <span>
                    <i class="fas fa-calendar mr-1"></i>
                    <%= l(gift_record.created_at, format: :short) %>
                  </span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-gift text-2xl text-gray-400"></i>
          </div>
          <h4 class="text-lg font-medium text-gray-900 mb-2">ギフト記録がありません</h4>
          <p class="text-gray-500">このユーザーはまだギフト記録を投稿していません。</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 詳細活動統計 -->
  <div class="bg-white rounded-lg shadow-md">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">
        <i class="fas fa-chart-bar mr-2 text-gray-500"></i>
        活動詳細
      </h3>
    </div>
    
    <div class="px-6 py-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="text-center">
          <div class="text-2xl font-bold text-blue-600">
            <%= @user_statistics[:gift_records_count] %>
          </div>
          <div class="text-sm text-gray-500">総ギフト記録数</div>
        </div>
        
        <div class="text-center">
          <div class="text-2xl font-bold text-green-600">
            <%= @user_statistics[:public_gift_records_count] %>
          </div>
          <div class="text-sm text-gray-500">公開記録数</div>
        </div>
        
        <div class="text-center">
          <div class="text-2xl font-bold text-purple-600">
            <%= @user_statistics[:favorites_count] %>
          </div>
          <div class="text-sm text-gray-500">お気に入り数</div>
        </div>
        
        <div class="text-center">
          <div class="text-2xl font-bold text-orange-600">
            <%= @user_statistics[:comments_count] %>
          </div>
          <div class="text-sm text-gray-500">コメント数</div>
        </div>
      </div>

      <!-- エンゲージメント率 -->
      <% if @user_statistics[:gift_records_count] > 0 %>
        <div class="mt-6 pt-6 border-t border-gray-200">
          <h4 class="text-sm font-medium text-gray-900 mb-3">エンゲージメント分析</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <div class="text-sm text-gray-500 mb-1">公開率</div>
              <% public_rate = (@user_statistics[:public_gift_records_count].to_f / @user_statistics[:gift_records_count] * 100).round(1) %>
              <div class="flex items-center">
                <div class="flex-1 bg-gray-200 rounded-full h-2 mr-3">
                  <div class="bg-green-500 h-2 rounded-full" style="width: <%= public_rate %>%"></div>
                </div>
                <span class="text-sm font-medium text-gray-900"><%= public_rate %>%</span>
              </div>
            </div>
            
            <div>
              <div class="text-sm text-gray-500 mb-1">記録当たり平均お気に入り</div>
              <% avg_favorites = (@user_statistics[:favorites_count].to_f / @user_statistics[:gift_records_count]).round(1) %>
              <div class="text-lg font-medium text-purple-600">
                <%= avg_favorites %>件/記録
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>