
  <div class="w-[90%] max-w-[400px] px-8 py-10 rounded-xl text-center mx-auto relative">
    <h2 class="mb-10 text-2xl font-semibold text-gray-800 leading-snug">アカウントにログイン</h2>
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= button_to image_tag('line_login.png', alt: "#{OmniAuth::Utils.camelize(provider)}でログイン"), omniauth_authorize_path(resource_name, provider), data: { turbo: false } %>
        <br />
      <% end %>
    <% end %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-6 text-left">
        <%= f.label :メールアドレス, class: "block mb-2 font-semibold text-gray-600 text-sm" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-base bg-white text-black focus:outline-none focus:ring-2 focus:ring-orange-400" %>
      </div>

      <div class="mb-6 text-left">
        <%= f.label :パスワード, class: "block mb-2 font-semibold text-gray-600 text-sm" %>
        <%= f.password_field :password, autocomplete: "current-password",
              class: "w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-base bg-white text-black focus:outline-none focus:ring-2 focus:ring-orange-400" %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name), class: "text-sm text-gray-700 hover:text-gray-900 inline-block mt-2" %><br />
        <% end %>
      </div>

     

      <% if devise_mapping.rememberable? %>
        <div class="mb-8 text-left">
          <label class="flex items-center text-sm text-gray-600 cursor-pointer">
            <%= f.check_box :remember_me, class: "checkbox checkbox-primary mr-2" %>
            ログインしたままにする
          </label>
        </div>
      <% end %>

      <div class="mb-8">
        <%= f.submit "ログイン", class: "devise-primary-link" %>
      </div>
    <% end %>

    <div class="border-t border-orange-200 pt-6">
      <h2 class="mb-6 text-base font-semibold text-gray-800 leading-snug">アカウントをお持ちでない方</h2>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
