
  <div style="
    width: 90%;
    max-width: 400px;
    padding: 40px 30px;
    border-radius: 12px;
    text-align: center;
    margin: 0 auto;
    position: relative;
  ">

  <h2 class="text-2xl font-semibold text-gray-800 mb-10  ">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div style="margin-bottom: 24px; text-align: left;">
        <%= f.label :name, "ユーザー名 *", style: "
          display: block;
          margin-bottom: 8px;
          font-weight: 600;
          color: #555;
          font-size: 14px;
        " %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", 
            placeholder: "表示される名前を入力してください", style: "
          width: 100%;
          padding: 14px 16px;
          border: 2px solid #e1e5e9;
          border-radius: 8px;
          font-size: 16px;
          box-sizing: border-box;
          transition: border-color 0.3s ease;
          margin-top: 8px;
          background-color: white;
          color: black;
        " %>
        <small style="display: block; margin-top: 4px; color: #6c757d; font-size: 12px;">
          10文字以内で入力してください。他のユーザーに表示される名前です。
        </small>
      </div>

      <div style="margin-bottom: 24px; text-align: left;">
        <%= f.label :email, "メールアドレス *", style: "
          display: block;
          margin-bottom: 8px;
          font-weight: 600;
          color: #555;
          font-size: 14px;
        " %>
        <%= f.email_field :email, autocomplete: "email", 
            placeholder: "example@email.com", style: "
          width: 100%;
          padding: 14px 16px;
          border: 2px solid #e1e5e9;
          border-radius: 8px;
          font-size: 16px;
          box-sizing: border-box;
          transition: border-color 0.3s ease;
          margin-top: 8px;
          background-color: white;
          color: black;
        " %>
      </div>

      <div style="margin-bottom: 24px; text-align: left;">
        <%= f.label :password, "パスワード *", style: "
          display: block;
          margin-bottom: 8px;
          font-weight: 600;
          color: #555;
          font-size: 14px;
        " %>
        <% if @minimum_password_length %>
          <small style="display: block; margin-top: 4px; color: #6c757d; font-size: 12px;">
            <%= @minimum_password_length %>文字以上で入力してください
          </small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", style: "
          width: 100%;
          padding: 14px 16px;
          border: 2px solid #e1e5e9;
          border-radius: 8px;
          font-size: 16px;
          box-sizing: border-box;
          transition: border-color 0.3s ease;
          margin-top: 8px;
          background-color: white;
          color: black;
        " %>
      </div>

      <div style="margin-bottom: 32px; text-align: left;">
        <%= f.label :password_confirmation, "パスワード再入力（確認用）*", style: "
          display: block;
          margin-bottom: 8px;
          font-weight: 600;
          color: #555;
          font-size: 14px;
        " %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "
          width: 100%;
          padding: 14px 16px;
          border: 2px solid #e1e5e9;
          border-radius: 8px;
          font-size: 16px;
          box-sizing: border-box;
          transition: border-color 0.3s ease;
          margin-top: 8px;
          background-color: white;
          color: black;
        " %>
        <small style="display: block; margin-top: 4px; color: #6c757d; font-size: 12px;">
          上記と同じパスワードを入力してください
        </small>
      </div>

      <!-- 必須項目の説明 -->
      <div style="margin-bottom: 16px; text-align: center;">
        <small style="color: #6c757d; font-size: 12px;">
          <span style="color: #e74c3c;">*</span>すべて必須項目です。
        </small>
      </div>

      <div style="margin-bottom: 32px;">
        <%= f.submit "新規登録", class: "devise-primary-link" %>
      </div>
    <% end %>

    <div style="border-top: 1px solid #FED7AA; padding-top: 24px;">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
