
  <div class="w-[90%] max-w-[400px] px-8 py-10 rounded-xl text-center mx-auto relative">

  <h2 class="text-2xl font-semibold text-gray-800 mb-10  ">新規登録</h2>

    <div class="mb-2 font-semibold text-gray-600 text-sm">Lineで新規登録</div>
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= button_to image_tag('line_login.webp', alt: "#{OmniAuth::Utils.camelize(provider)}で新規登録"), omniauth_authorize_path(resource_name, provider), data: { turbo: false } %>
        <br />
      <% end %>
    <% end %>
    <div class="border-t border-orange-200 pt-6">
    </div>

  <div class="mb-2 font-semibold text-gray-600 text-sm">メールアドレスで登録</div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-6 text-left">
        <%= f.label :name, "ユーザー名 *", class: "block mb-2 font-semibold text-gray-600 text-sm" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name",
            placeholder: "表示される名前を入力してください",
            class: "w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-base bg-white text-black focus:outline-none focus:ring-2 focus:ring-orange-400 mt-2" %>
        <small class="block mt-1 text-gray-500 text-xs">
          10文字以内で入力してください。他のユーザーに表示される名前です。
        </small>
      </div>

      <div class="mb-6 text-left">
        <%= f.label :email, "メールアドレス *", class: "block mb-2 font-semibold text-gray-600 text-sm" %>
        <%= f.email_field :email, autocomplete: "email",
            placeholder: "example@email.com",
            class: "w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-base bg-white text-black focus:outline-none focus:ring-2 focus:ring-orange-400 mt-2" %>
      </div>

      <div class="mb-6 text-left">
        <%= f.label :password, "パスワード *", class: "block mb-2 font-semibold text-gray-600 text-sm" %>
        <% if @minimum_password_length %>
          <small class="block mt-1 text-gray-500 text-xs">
            <%= @minimum_password_length %>文字以上で入力してください
          </small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password",
            class: "w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-base bg-white text-black focus:outline-none focus:ring-2 focus:ring-orange-400 mt-2" %>
      </div>

      <div class="mb-8 text-left">
        <%= f.label :password_confirmation, "パスワード再入力（確認用）*", class: "block mb-2 font-semibold text-gray-600 text-sm" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: "w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-base bg-white text-black focus:outline-none focus:ring-2 focus:ring-orange-400 mt-2" %>
        <small class="block mt-1 text-gray-500 text-xs">
          上記と同じパスワードを入力してください
        </small>
      </div>

      <!-- 必須項目の説明 -->
      <div class="mb-4 text-center">
        <small class="text-gray-500 text-xs">
          <span class="text-red-500">*</span>すべて必須項目です。
        </small>
      </div>

      <div class="mb-8">
        <%= f.submit "新規登録", class: "devise-primary-link" %>
      </div>
    <% end %>

    <div class="border-t border-orange-200 pt-6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
