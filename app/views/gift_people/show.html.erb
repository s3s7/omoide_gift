<% content_for(:title, "#{@gift_person.name}さんの詳細") %>

<!-- メインコンテナ - 中央寄せ -->
<div class="max-w-6xl mx-auto">
  <div class="bg-white dark:bg-gray-900 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-2 mb-2 max-w-4xl mx-auto">
  <div class="mb-6 mt-4">
    <div class="flex items-center justify-between mb-4">
      <div class="flex items-center">
        <%= link_to gift_people_path, class: "mr-4 text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200" do %>
          <i class="fas fa-arrow-left text-lg"></i>
        <% end %>
        <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-200">
          <i class="fas fa-user mr-2 text-primary"></i>
          <%= @gift_person.name %>さんの詳細
        </h2>
      </div>
      
      <div class="flex space-x-3">
        <%= link_to edit_gift_person_path(@gift_person),
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
          <i class="fas fa-edit mr-2"></i>
          編集
        <% end %>
        
        <%= link_to new_gift_record_path(gift_person_id: @gift_person.id),
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white btn-primary hover:bg-primary-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary" do %>
          <i class="fas fa-gift mr-2"></i>
          ギフト記録を追加
        <% end %>
        
        <button type="button"
                data-action="click->delete-modal#show"
                data-delete-url="<%= gift_person_path(@gift_person) %>"
                data-item-name="<%= j(@gift_person.name) %>さん"
                data-csrf-token="<%= form_authenticity_token %>"
                class="inline-flex items-center px-4 py-2 border border-red-300 dark:border-red-600 rounded-md shadow-sm text-sm font-medium text-red-700 dark:text-red-400 bg-white dark:bg-gray-800 hover:bg-red-50 dark:hover:bg-red-900/20 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 dark:focus:ring-red-400 transition-colors"
                title="<%= @gift_person.name %>さんを削除">
          <i class="fas fa-trash mr-2"></i>
          削除
        </button>
      </div>
    </div>
  </div>
  </div>
  <div class="bg-white dark:bg-gray-900 rounded-lg shadow-md border border-gray-200 dark:border-gray-700 p-6 mb-8">
    <div class="space-y-6">
      <div class="mb-6">
        <label class="block mb-2 font-semibold text-gray-700 dark:text-gray-300 text-sm">名前</label>
        <div class="w-full p-4 border-2 border-gray-300 dark:border-gray-600 rounded-lg text-base bg-gray-50 dark:bg-gray-800 text-gray-900 dark:text-gray-100">
          <%= @gift_person.name %>
        </div>
      </div>

      <div class="mb-6">
        <label class="block mb-2 font-semibold text-gray-700 dark:text-gray-300 text-sm">関係性</label>
        <div class="w-full p-4 border-2 border-gray-300 dark:border-gray-600 rounded-lg text-base bg-gray-50 dark:bg-gray-800 text-gray-900 dark:text-gray-100">
          <span class="<%= @gift_person.relationship&.name.present? ? '' : 'text-gray-500 dark:text-gray-400' %>">
            <%= @gift_person.relationship&.name || "未設定" %>
          </span>
        </div>
      </div>

      <div class="mb-6">
        <label class="block mb-2 font-semibold text-gray-700 dark:text-gray-300 text-sm">誕生日</label>
        <div class="w-full p-4 border-2 border-gray-300 dark:border-gray-600 rounded-lg text-base bg-gray-50 dark:bg-gray-800 text-gray-900 dark:text-gray-100">
          <% if @gift_person.birthday.present? %>
            <%= l(@gift_person.birthday, format: :long) %>
            <% if @gift_person.birthday.present? %>
              <span class="text-gray-500 dark:text-gray-400 text-sm ml-2">
                (<%= @gift_person.display_age_at(Date.current) %>)
              </span>
            <% end %>
          <% else %>
            <span class="text-gray-500 dark:text-gray-400">未設定</span>
          <% end %>
        </div>
      </div>

      <div class="mb-6">
        <label class="block mb-2 font-semibold text-gray-700 dark:text-gray-300 text-sm">好きなもの・趣味</label>
        <div class="w-full p-4 border-2 border-gray-300 dark:border-gray-600 rounded-lg text-base bg-gray-50 dark:bg-gray-800 text-gray-900 dark:text-gray-100 min-h-20">
          <% if @gift_person.likes.present? %>
            <%= simple_format(@gift_person.likes, class: "m-0 whitespace-pre-line") %>
          <% else %>
            <span class="text-gray-500 dark:text-gray-400">未記録</span>
          <% end %>
        </div>
      </div>

      <div class="mb-6">
        <label class="block mb-2 font-semibold text-gray-700 dark:text-gray-300 text-sm">苦手なもの・アレルギー</label>
        <div class="w-full p-4 border-2 border-gray-300 dark:border-gray-600 rounded-lg text-base bg-gray-50 dark:bg-gray-800 text-gray-900 dark:text-gray-100 min-h-20">
          <% if @gift_person.dislikes.present? %>
            <%= simple_format(@gift_person.dislikes, class: "m-0 whitespace-pre-line") %>
          <% else %>
            <span class="text-gray-500 dark:text-gray-400">未記録</span>
          <% end %>
        </div>
      </div>

      <% if @gift_person.memo.present? %>
        <div class="mb-6">
          <label class="block mb-2 font-semibold text-gray-700 dark:text-gray-300 text-sm">メモ</label>
          <div class="w-full p-4 border-2 border-gray-300 dark:border-gray-600 rounded-lg text-base bg-gray-50 dark:bg-gray-800 text-gray-900 dark:text-gray-100 min-h-24">
            <%= simple_format(@gift_person.memo, class: "m-0 whitespace-pre-line") %>
          </div>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6 pt-6 border-t border-gray-200 dark:border-gray-700">
        <div class="bg-pink-50 dark:bg-pink-900/20 rounded-lg p-4">
          <div class="flex items-center justify-between">
            <span class="text-sm font-medium text-gray-600 dark:text-gray-300">総ギフト数</span>
            <span class="text-2xl font-bold text-primary">
              <%= @gift_records.count %>件
            </span>
          </div>
        </div>
      
      </div>
    </div>
  </div>

  <!-- ギフト記録一覧 -->
  <div class="bg-white dark:bg-gray-900 rounded-lg shadow-md border border-gray-200 dark:border-gray-700 p-6">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-lg font-medium text-gray-800 dark:text-gray-200">
        <i class="fas fa-gifts mr-2 text-primary"></i>
        ギフト記録（<%= pluralize(@gift_records.count, "件") %>）
      </h3>
      
      <% if @gift_records.any? %>
        <%= link_to gift_records_path(gift_person_id: @gift_person.id),
            class: "text-sm text-primary hover:text-primary-hover font-medium" do %>
          すべて見る →
        <% end %>
      <% end %>
    </div>
    
    <% if @gift_records.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @gift_records.each do |record| %>
          <div class="border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 rounded-lg p-4 hover:shadow-md dark:hover:shadow-gray-900/25 transition-shadow cursor-pointer relative" onclick="window.location.href='<%= gift_record_path(record) %>'">
            <!-- 削除ボタン（右上） -->
            <% if user_signed_in? && current_user == record.user %>
              <div class="absolute top-2 right-2" onclick="event.stopPropagation();">
                <button type="button"
                        data-action="click->delete-modal#show"
                        data-delete-url="<%= gift_record_path(record) %>"
                        data-item-name="<%= j(record.item_name) %>"
                        data-csrf-token="<%= form_authenticity_token %>"
                        onclick="event.stopPropagation();"
                        class="p-1 bg-red-100 dark:bg-red-900/30 rounded-full shadow-sm hover:bg-red-200 dark:hover:bg-red-900/50 transition-colors"
                        title="このギフト記録を削除"
                        aria-label="<%= record.item_name %>を削除">
                  <i class="fas fa-trash text-red-600 text-xs"></i>
                </button>
              </div>
            <% end %>
            
            <!-- ギフト情報 -->
            <div class="mb-3 pr-8">
              <h4 class="font-medium text-gray-800 dark:text-gray-200 mb-1">
                <%= record.item_name %>
              </h4>
              <div class="flex items-center justify-between text-sm text-gray-600 dark:text-gray-400">
                <span>
                  <i class="fas fa-calendar mr-1"></i>
                  <%= l(record.gift_at, format: :short) %>
                </span>
                <% if record.amount.present? %>
                  <span class="font-medium text-green-600 dark:text-green-400">
                    ¥<%= number_with_delimiter(record.amount) %>
                  </span>
                <% end %>
              </div>
            </div>
            
            <!-- イベント -->
            <div class="mb-3">
              <div class="flex items-center text-sm text-gray-600 dark:text-gray-400">
                <i class="fas fa-tag mr-1"></i>
                <%= record.event&.name || "未設定" %>
              </div>
            </div>
            
            <!-- メモ（短縮） -->
            <% if record.memo.present? %>
              <div class="mt-3 pt-3 border-t border-gray-200 dark:border-gray-700">
                <p class="text-xs text-gray-600 dark:text-gray-400 leading-relaxed">
                  <i class="fas fa-comment mr-1"></i>
                  <%= truncate(record.memo, length: 60) %>
                </p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <div class="mx-auto h-16 w-16 text-gray-300 dark:text-gray-600 mb-4">
          <i class="fas fa-gift text-4xl"></i>
        </div>
        <h4 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-2">
          まだギフト記録がありません
        </h4>
        <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
          <%= @gift_person.name %>さんへのギフト記録を作成してみましょう。
        </p>
        <%= link_to new_gift_record_path(gift_person_id: @gift_person.id),
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white btn-primary hover:bg-primary-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary" do %>
          <i class="fas fa-plus mr-2"></i>
          最初のギフト記録を作成
        <% end %>
      </div>
    <% end %>
  </div>


  <!-- 共通削除確認モーダル -->
  <%= render 'shared/delete_confirmation_modal' %>
</div>
