<% content_for(:title, "#{@gift_person.name}さんの詳細") %>

<!-- メインコンテナ - 中央寄せ -->
<div class="max-w-6xl mx-auto">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-2 mb-2 max-w-4xl mx-auto">
  <div class="mb-6 mt-4">
    <div class="flex items-center justify-between mb-4">
      <div class="flex items-center">
        <%= link_to gift_people_path, class: "mr-4 text-gray-600 hover:text-gray-800" do %>
          <i class="fas fa-arrow-left text-lg"></i>
        <% end %>
        <h2 class="text-2xl font-bold text-gray-800">
          <i class="fas fa-user mr-2 text-primary"></i>
          <%= @gift_person.name %>さんの詳細
        </h2>
      </div>
      
      <div class="flex space-x-3">
        <%= link_to edit_gift_person_path(@gift_person),
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
          <i class="fas fa-edit mr-2"></i>
          編集
        <% end %>
        
        <%= link_to new_gift_record_path(gift_person_id: @gift_person.id),
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white btn-primary hover:bg-primary-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary" do %>
          <i class="fas fa-gift mr-2"></i>
          ギフト記録を追加
        <% end %>
        
        <button type="button"
                data-delete-modal="true"
                data-item-name="<%= j(@gift_person.name) %>さん"
                data-delete-url="<%= gift_person_path(@gift_person) %>"
                data-csrf-token="<%= form_authenticity_token %>"
                class="delete-modal-trigger inline-flex items-center px-4 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
                title="<%= @gift_person.name %>さんを削除">
          <i class="fas fa-trash mr-2"></i>
          削除
        </button>
      </div>
    </div>
  </div>
  </div>
  <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 mb-8">
    <div class="space-y-6">
      <div style="margin-bottom: 24px; text-align: left;">
        <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #555; font-size: 14px;">名前</label>
        <div style="width: 100%; padding: 14px 16px; border: 2px solid #e1e5e9; border-radius: 8px; font-size: 16px; box-sizing: border-box; background-color: #f8f9fa;">
          <%= @gift_person.name %>
        </div>
      </div>

      <div style="margin-bottom: 24px; text-align: left;">
        <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #555; font-size: 14px;">関係性</label>
        <div style="width: 100%; padding: 14px 16px; border: 2px solid #e1e5e9; border-radius: 8px; font-size: 16px; box-sizing: border-box; background-color: #f8f9fa;">
          <%= @gift_person.relationship&.name || "未設定" %>
        </div>
      </div>

      <div style="margin-bottom: 24px; text-align: left;">
        <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #555; font-size: 14px;">誕生日</label>
        <div style="width: 100%; padding: 14px 16px; border: 2px solid #e1e5e9; border-radius: 8px; font-size: 16px; box-sizing: border-box; background-color: #f8f9fa;">
          <% if @gift_person.birthday.present? %>
            <%= l(@gift_person.birthday, format: :long) %>
            <% if @gift_person.birthday.present? %>
              <span style="color: #6b7280; font-size: 14px; margin-left: 8px;">
                (<%= @gift_person.display_age_at(Date.current) %>)
              </span>
            <% end %>
          <% else %>
            <span style="color: #9ca3af;">未設定</span>
          <% end %>
        </div>
      </div>

      <div style="margin-bottom: 24px; text-align: left;">
        <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #555; font-size: 14px;">好きなもの・趣味</label>
        <div style="width: 100%; padding: 14px 16px; border: 2px solid #e1e5e9; border-radius: 8px; font-size: 16px; box-sizing: border-box; background-color: #f8f9fa; min-height: 80px;">
          <% if @gift_person.likes.present? %>
            <%= simple_format(@gift_person.likes, style: "margin: 0; white-space: pre-line;") %>
          <% else %>
            <span style="color: #9ca3af;">未記録</span>
          <% end %>
        </div>
      </div>

      <div style="margin-bottom: 24px; text-align: left;">
        <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #555; font-size: 14px;">苦手なもの・アレルギー</label>
        <div style="width: 100%; padding: 14px 16px; border: 2px solid #e1e5e9; border-radius: 8px; font-size: 16px; box-sizing: border-box; background-color: #f8f9fa; min-height: 80px;">
          <% if @gift_person.dislikes.present? %>
            <%= simple_format(@gift_person.dislikes, style: "margin: 0; white-space: pre-line;") %>
          <% else %>
            <span style="color: #9ca3af;">未記録</span>
          <% end %>
        </div>
      </div>

      <% if @gift_person.memo.present? %>
        <div style="margin-bottom: 24px; text-align: left;">
          <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #555; font-size: 14px;">メモ</label>
          <div style="width: 100%; padding: 14px 16px; border: 2px solid #e1e5e9; border-radius: 8px; font-size: 16px; box-sizing: border-box; background-color: #f8f9fa; min-height: 100px;">
            <%= simple_format(@gift_person.memo, style: "margin: 0; white-space: pre-line;") %>
          </div>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6 pt-6 border-t border-gray-200">
        <div class="bg-pink-50 rounded-lg p-4">
          <div class="flex items-center justify-between">
            <span class="text-sm font-medium text-gray-600">総ギフト数</span>
            <span class="text-2xl font-bold text-primary">
              <%= @gift_records.count %>件
            </span>
          </div>
        </div>
      
      </div>
    </div>
  </div>

  <!-- ギフト記録一覧 -->
  <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-lg font-medium text-gray-800">
        <i class="fas fa-gifts mr-2 text-primary"></i>
        ギフト記録（<%= pluralize(@gift_records.count, "件") %>）
      </h3>
      
      <% if @gift_records.any? %>
        <%= link_to gift_records_path(gift_person_id: @gift_person.id),
            class: "text-sm text-primary hover:text-primary-hover font-medium" do %>
          すべて見る →
        <% end %>
      <% end %>
    </div>
    
    <% if @gift_records.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @gift_records.each do |record| %>
          <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow cursor-pointer relative" onclick="window.location.href='<%= gift_record_path(record) %>'">
            <!-- 削除ボタン（右上） -->
            <% if user_signed_in? && current_user == record.user %>
              <div class="absolute top-2 right-2" onclick="event.stopPropagation();">
                <button type="button"
                        data-delete-modal="true"
                        data-item-name="<%= j(record.item_name) %>"
                        data-delete-url="<%= gift_record_path(record) %>"
                        data-csrf-token="<%= form_authenticity_token %>"
                        onclick="event.stopPropagation();"
                        class="delete-modal-trigger p-1 bg-red-100 rounded-full shadow-sm hover:bg-red-200 transition-colors"
                        title="このギフト記録を削除"
                        aria-label="<%= record.item_name %>を削除">
                  <i class="fas fa-trash text-red-600 text-xs"></i>
                </button>
              </div>
            <% end %>
            
            <!-- ギフト情報 -->
            <div class="mb-3 pr-8">
              <h4 class="font-medium text-gray-800 mb-1">
                <%= record.item_name %>
              </h4>
              <div class="flex items-center justify-between text-sm text-gray-600">
                <span>
                  <i class="fas fa-calendar mr-1"></i>
                  <%= l(record.gift_at, format: :short) %>
                </span>
                <% if record.amount.present? %>
                  <span class="font-medium text-green-600">
                    ¥<%= number_with_delimiter(record.amount) %>
                  </span>
                <% end %>
              </div>
            </div>
            
            <!-- イベント -->
            <div class="mb-3">
              <div class="flex items-center text-sm text-gray-600">
                <i class="fas fa-tag mr-1"></i>
                <%= record.event&.name || "未設定" %>
              </div>
            </div>
            
            <!-- メモ（短縮） -->
            <% if record.memo.present? %>
              <div class="mt-3 pt-3 border-t border-gray-200">
                <p class="text-xs text-gray-600 leading-relaxed">
                  <i class="fas fa-comment mr-1"></i>
                  <%= truncate(record.memo, length: 60) %>
                </p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <div class="mx-auto h-16 w-16 text-gray-300 mb-4">
          <i class="fas fa-gift text-4xl"></i>
        </div>
        <h4 class="text-lg font-medium text-gray-900 mb-2">
          まだギフト記録がありません
        </h4>
        <p class="text-sm text-gray-500 mb-4">
          <%= @gift_person.name %>さんへのギフト記録を作成してみましょう。
        </p>
        <%= link_to new_gift_record_path(gift_person_id: @gift_person.id),
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white btn-primary hover:bg-primary-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary" do %>
          <i class="fas fa-plus mr-2"></i>
          最初のギフト記録を作成
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- 共通削除確認モーダル -->
  <%= render 'shared/delete_confirmation_modal' %>
</div>
