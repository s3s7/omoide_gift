
<% content_for(:title, "ギフト相手の編集") %>
<!-- メインコンテナ - 中央寄せ -->
<div class="max-w-6xl mx-auto">
  <!-- ヘッダー部分 -->
  <div class="mb-6 mt-4">
    <div class="flex items-center justify-between mb-4">
      <!-- 左側スペース -->
      <div class="flex-1"></div>
      
      <!-- 中央タイトル -->
      <div class="flex-1 text-center">
        <h2 class="text-2xl font-bold text-gray-800">
          ギフト相手の編集
        </h2>
      </div>
      
      <!-- 削除ボタン -->
      <div class="flex-1 flex justify-end">
        <button type="button"
                data-action="click->delete-modal#show"
                data-item-name="<%= j(@gift_person.name) %>さん"
                data-delete-url="<%= gift_person_path(@gift_person) %>"
                data-csrf-token="<%= form_authenticity_token %>"
                class="inline-flex items-center px-3 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
                title="<%= @gift_person.name %>さんを削除">
          <i class="fas fa-trash mr-2"></i>
          削除
        </button>
      </div>
    </div>

   
  </div>

  <!-- フォーム部分 -->
  <div style="
    width: 90%;
    max-width: 600px;
    padding: 40px 30px;
    border-radius: 12px;
    text-align: center;
    margin: 0 auto;
    position: relative;
  ">
    <%= render 'shared/error_messages', object: @gift_person %>
    
    <!-- 編集モード用のフォーム -->
    <div data-controller="gift-person-form" 
         data-gift-person-form-edit-mode-value="true">
      <%= render 'form', gift_person: @gift_person, edit_mode: true %>
    </div>
  </div>
</div>
<!-- 削除確認モーダル -->
<%= render 'shared/delete_confirmation_modal' %>
