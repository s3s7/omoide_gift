<% content_for(:title, "プロフィール編集") %>
<!-- フォーム部分 -->
<div class="max-w-2xl mx-auto" data-controller="user-form">
  <!-- ヘッダー部分 -->
  <div class="mb-6 mt-4">
    <div class="flex items-center justify-between mb-4">
      <!-- 左側スペース -->
      <div class="flex-1"></div>
      
      <!-- 中央タイトル -->
      <div class="flex-1 text-center">
        <h2 class="text-2xl font-bold text-gray-800">
          プロフィール編集
        </h2>
      </div>
      
      <!-- 右側スペース -->
      <div class="flex-1"></div>
    </div>

    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
      <%= form_with model: @user, url: mypage_path, method: :patch, local: true, 
          class: "space-y-6", 
          data: { 
            turbo: false,
            "user-form-target": "form",
            "action": "submit->user-form#formSubmitted"
          } do |f| %>
        
        <!-- エラー表示 -->
        <% if @user.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <i class="fas fa-exclamation-circle text-red-400"></i>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@user.errors.count, "件") %>のエラーがあります
                </h3>
                <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- 基本情報セクション -->
        <div class="border-b border-gray-200 pb-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">
            <i class="fas fa-id-card mr-2 text-blue-500"></i>
            基本情報
          </h3>
          
          <!-- 名前 -->
          <div class="mb-4">
            <%= f.label :name, "表示名", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="relative">
              <%= f.text_field :name, 
                  data: { "user-form-target": "input" },
                  class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500",
                  style: "background-color: white; color: black;",
                  placeholder: "表示される名前を入力してください",
                  maxlength: 50 %>
              <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                <i class="fas fa-user text-gray-400"></i>
              </div>
            </div>
            <p class="text-xs text-gray-500 mt-1">
              <i class="fas fa-info-circle mr-1"></i>
              50文字以内で入力してください。空の場合はメールアドレスの＠より前の部分が表示されます。
            </p>
          </div>

          <!-- メールアドレス -->
          <div class="mb-4">
            <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="relative">
              <%= f.email_field :email, 
                  data: { "user-form-target": "input" },
                  class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500",
                  style: "background-color: white; color: black;",
                  placeholder: @user.email.blank? ? "メールアドレス未登録" : @user.email %>
              <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                <i class="fas fa-envelope text-gray-400"></i>
              </div>
            </div>
            <p class="text-xs text-gray-500 mt-1">
              <i class="fas fa-info-circle mr-1"></i>
              <% if @user.provider.present? %>
                LINEログインユーザーです。メールアドレスを追加で登録することも可能です。
              <% else %>
                ログインに使用するメールアドレスです。変更する場合は有効なメールアドレスを入力してください。
              <% end %>
            </p>
          </div>
        </div>

        <!-- プロフィール画像セクション -->
        <div class="border-b border-gray-200 pb-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">
            <i class="fas fa-image mr-2 text-purple-500"></i>
            プロフィール画像
          </h3>
          
          <div class="space-y-4">
            <!-- 現在の画像表示 -->
            <div class="flex items-start space-x-6">
              <div class="flex-shrink-0">
                <div class="relative">
                  <% if @user.has_avatar? && display_avatar(@user, :large) %>
                    <%= image_tag display_avatar(@user, :large), 
                        data: { "user-form-target": "currentAvatar" },
                        class: "w-24 h-24 rounded-full object-cover border-4 border-gray-200 shadow-lg" %>
                  <% else %>
                    <div data-user-form-target="currentAvatar" class="w-24 h-24 rounded-full bg-gray-200 border-4 border-gray-300 flex items-center justify-center shadow-lg">
                      <i class="fas fa-user text-gray-400 text-3xl"></i>
                    </div>
                  <% end %>
                  
                  <!-- プレビュー画像（Stimulus で制御） -->
                  <img data-user-form-target="avatarPreview" src="" alt="プレビュー" 
                      class="w-24 h-24 rounded-full object-cover border-4 border-blue-300 shadow-lg absolute top-0 left-0 hidden">
                </div>
              </div>
              
              <div class="flex-1 space-y-3">
                <!-- ファイル選択 -->
                <div>
                  <%= f.label :avatar, "新しい画像を選択", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= f.file_field :avatar, 
                      data: { 
                        "user-form-target": "avatarInput",
                        "action": "change->user-form#avatarSelected"
                      },
                      accept: "image/jpeg,image/jpg,image/png,image/webp",
                      class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
                  <p class="text-xs text-gray-500 mt-1">
                    <i class="fas fa-info-circle mr-1"></i>
                    JPEG、PNG、WEBP形式のファイルをアップロードできます（最大5MB）
                  </p>
                </div>
                
                <!-- プレビューリセットボタン -->
                <div>
                  <button type="button" 
                          data-user-form-target="resetAvatarButton"
                          data-action="click->user-form#resetAvatarPreview"
                          class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 hidden">
                    <i class="fas fa-undo mr-2"></i>
                    選択をリセット
                  </button>
                </div>
                
                <!-- 削除オプション -->
                <% if @user.has_avatar? %>
                  <div>
                    <%= f.check_box :remove_avatar, { 
                        data: { 
                          "user-form-target": "removeAvatarCheckbox",
                          "action": "change->user-form#removeAvatarToggled"
                        },
                        class: "checkbox checkbox-error"
                      }, "1", "" %>
                    <%= f.label :remove_avatar, "現在のプロフィール画像を削除する", 
                        class: "ml-2 text-sm text-red-600 font-medium cursor-pointer" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- アカウント情報セクション -->
        <div class="border-b border-gray-200 pb-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">
            <i class="fas fa-shield-alt mr-2 text-green-500"></i>
            アカウント情報
          </h3>
          
          <div class="bg-gray-50 rounded-lg p-4 space-y-3">
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-700">登録日</span>
              <span class="text-sm text-gray-600"><%= l(@user.created_at, format: :long) %></span>
            </div>
            
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-700">総ギフト記録数</span>
              <span class="text-sm text-gray-600"><%= @user.total_gift_records %>件</span>
            </div>
            
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-700">登録済みギフト相手数</span>
              <span class="text-sm text-gray-600"><%= @user.total_gift_people %>人</span>
            </div>
          </div>
        </div>

        <!-- パスワード変更リンク -->
        <div class="border-b border-gray-200 pb-6">
          <h3 class="text-lg font-medium text-gray-800 mb-4">
            <i class="fas fa-key mr-2 text-orange-500"></i>
            セキュリティ設定
          </h3>
          
          <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <i class="fas fa-exclamation-triangle text-yellow-400"></i>
              </div>
              <div class="ml-3 flex-1">
                <h4 class="text-sm font-medium text-yellow-800">パスワードの変更</h4>
                <p class="text-sm text-yellow-700 mt-1">
                  パスワードを変更する場合は、セキュリティのため専用ページで変更してください。
                </p>
                <div class="mt-3">
                  <%= link_to edit_user_registration_path,
                      class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-yellow-700 bg-yellow-100 hover:bg-yellow-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500" do %>
                    <i class="fas fa-key mr-2"></i>
                    パスワード変更画面へ
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- 送信ボタン -->
        <div class="flex items-center justify-between pt-6">
          <div class="flex space-x-3">
            <%= link_to mypage_path,
                data: { 
                  "user-form-target": "cancelButton",
                  "action": "click->user-form#cancelClicked"
                },
                class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" do %>
              <i class="fas fa-times mr-2"></i>
              キャンセル
            <% end %>
          </div>

          <div class="flex space-x-3">
            <%= button_tag type: "button", 
                data: { "action": "click->user-form#resetForm" },
                class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" do %>
              <i class="fas fa-undo mr-2"></i>
              リセット
            <% end %>
            
            <%= f.submit "変更を保存",
                data: { 
                  confirm: "プロフィール情報を更新しますか？",
                  "user-form-target": "submitButton"
                },
                class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- 追加アクション -->
    <div class="mt-6 bg-white rounded-lg shadow-md border border-gray-200 p-6">
      <h3 class="text-lg font-medium text-gray-800 mb-4">
        <i class="fas fa-tools mr-2 text-purple-500"></i>
        その他の設定
      </h3>
      
      <div class="space-y-3">
        <%= link_to gift_records_path,
            class: "flex items-center p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors" do %>
          <i class="fas fa-list text-purple-600 mr-3"></i>
          <div class="flex-1">
            <div class="font-medium text-gray-800">ギフト記録の管理</div>
            <div class="text-sm text-gray-600">すべてのギフト記録を表示・編集</div>
          </div>
          <i class="fas fa-chevron-right text-gray-400"></i>
        <% end %>
        
        <%= link_to gift_people_path,
            class: "flex items-center p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors" do %>
          <i class="fas fa-users text-pink-600 mr-3"></i>
          <div class="flex-1">
            <div class="font-medium text-gray-800">ギフト相手の管理</div>
            <div class="text-sm text-gray-600">ギフト相手の追加・編集・削除</div>
          </div>
          <i class="fas fa-chevron-right text-gray-400"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
