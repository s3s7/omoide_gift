<% content_for(:title, "マイページ") %>
<!-- メインコンテナ - 中央寄せ -->
<div class="max-w-6xl mx-auto"data-controller="user-profile">
  <!-- ヘッダー部分 -->
  <div class="mb-6 mt-4">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 mb-4">
      <div class="flex items-center w-full sm:w-auto justify-center sm:justify-start">
        <h2 class="text-xl sm:text-2xl font-bold text-gray-800 text-center sm:text-left">
          マイページ
        </h2>
      </div>

      <!-- 操作ボタン -->
      <div class="w-full sm:w-auto flex flex-col sm:flex-row items-center gap-2 sm:gap-3 min-w-0">
        <%= link_to mypage_edit_path,
            class: "inline-flex items-center px-3 sm:px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 mx-auto sm:mx-0" do %>
          <i class="fas fa-edit mr-2"></i>
          プロフィール編集
        <% end %>

        <!-- 管理者専用リンク（右寄せ） -->
        <% if current_user_admin? %>
          <%= link_to admin_root_path,
              class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 self-end sm:self-auto sm:ml-auto" do %>
            <i class="fas fa-shield-alt mr-2"></i>
            管理者画面
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- ユーザー情報カード -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-3 sm:p-6 mb-6 w-full max-w-[320px] sm:max-w-[560px] md:max-w-[640px] mx-auto"
         data-user-profile-target="card"
         data-action="mouseenter->user-profile#cardMouseEnter mouseleave->user-profile#cardMouseLeave">
      <!-- ユーザー基本情報 -->
      <div class="flex items-center mb-6">
        <div class="w-12 h-12 sm:w-16 sm:h-16 mr-4 relative">
          <% if @user.has_avatar? && display_avatar(@user, :medium) %>
            <%= image_tag display_avatar(@user, :medium), 
                class: "w-full h-full rounded-full object-cover border-4 border-primary-light shadow-md" %>
          <% else %>
            <div class="w-full h-full bg-pink-100 rounded-full flex items-center justify-center border-4 border-primary-light shadow-md">
              <i class="fas fa-user text-2xl text-primary"></i>
            </div>
          <% end %>
        </div>
        <div class="flex-1 min-w-0">
          <h3 class="text-lg sm:text-xl font-semibold text-gray-800"><%= @user.display_name %></h3>
          <p class="text-gray-600 break-words whitespace-normal max-w-full leading-5"><%= @user.display_email %></p>
          <% if @user.fake_email? && @user.line_connected? %>
            <div class="mt-2 p-2 sm:p-3 bg-yellow-50 border border-yellow-200 rounded-md">
              <span class="text-yellow-800 text-xs sm:text-sm font-medium leading-relaxed break-words">
                <i class="fas fa-info-circle mr-1"></i>
                LINEで新規登録された場合、仮のメールアドレスが登録されています。メールアドレスを使用する場合、マイページから編集してください。
              </span>
            </div>
          <% end %>
          <div class="text-sm flex items-center mb-1">
            <% if @user.line_connected? %>
              <i class="fab fa-line mr-2 text-green-500"></i>
              <span class="text-green-600 font-medium">LINE: 連携済み</span>
            <% else %>
              <i class="fas fa-bell-slash mr-2 text-orange-500"></i>
              <span class="text-gray-600">LINE: 未連携</span>
              <div class="ml-3 inline-block">
                <%= button_to user_line_omniauth_authorize_path,
                    method: :post,
                    data: { turbo: false },
                    class: "inline-flex items-center px-3 py-1.5 border border-transparent rounded-md text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
                  <i class="fab fa-line mr-2"></i>
                  LINE連携する
                <% end %>
              </div>
            <% end %>
          </div>
          <p class="text-sm text-gray-500">登録日: <%= l(@user.created_at, format: :short) %></p>
        </div>
      </div>
      
      <!-- 統計情報 -->
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-3 sm:gap-4">
        <!-- 総ギフト数 -->
        <div class="bg-pink-50 rounded-lg p-3 sm:p-4">
          <div class="flex items-center">
            <div class="w-9 h-9 sm:w-10 sm:h-10 bg-pink-100 rounded-lg flex items-center justify-center mr-3">
              <i class="fas fa-gift text-primary"></i>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-600">総ギフト数</p>
              <p class="text-lg font-bold text-gray-900"><%= @total_gift_records %>件</p>
            </div>
          </div>
        </div>

        <!-- ギフト相手 -->
        <div class="bg-blue-50 rounded-lg p-3 sm:p-4">
          <div class="flex items-center">
            <div class="w-9 h-9 sm:w-10 sm:h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
              <i class="fas fa-users text-blue-600"></i>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-600">ギフト相手</p>
              <p class="text-lg font-bold text-gray-900"><%= @total_gift_people %>人</p>
            </div>
          </div>
        </div>

        <!-- 今年のギフト -->
        <div class="bg-purple-50 rounded-lg p-3 sm:p-4">
          <div class="flex items-center">
            <div class="w-9 h-9 sm:w-10 sm:h-10 bg-purple-100 rounded-lg flex items-center justify-center mr-3">
              <i class="fas fa-calendar-alt text-purple-600"></i>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-600">今年のギフト</p>
              <p class="text-lg font-bold text-gray-900"><%= @current_year_stats[:count] %>件</p>
            </div>
          </div>
        </div>

        <!-- 記念日リマインダー -->
        <div class="bg-orange-50 rounded-lg p-3 sm:p-4">
          <div class="flex items-center">
            <div class="w-9 h-9 sm:w-10 sm:h-10 bg-orange-100 rounded-lg flex items-center justify-center mr-3">
              <i class="fas fa-bell text-orange-600"></i>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-600">記念日設定</p>
              <p class="text-lg font-bold text-gray-900"><%= @total_reminds %>件</p>
            </div>
          </div>
        </div>

        <!-- 今後の記念日 -->
        <div class="bg-yellow-50 rounded-lg p-3 sm:p-4">
          <div class="flex items-center">
            <div class="w-9 h-9 sm:w-10 sm:h-10 bg-yellow-100 rounded-lg flex items-center justify-center mr-3">
              <i class="fas fa-clock text-yellow-600"></i>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-600">今後の記念日</p>
              <p class="text-lg font-bold text-gray-900"><%= @upcoming_reminds_count %>件</p>
            </div>
          </div>
        </div>

        <!-- お気に入り -->
        <div class="bg-green-50 rounded-lg p-3 sm:p-4">
          <div class="flex items-center">
            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mr-3">
              <i class="fas fa-heart text-green-600"></i>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-600">お気に入り</p>
              <p class="text-lg font-bold text-gray-900"><%= @total_favorites %>件</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- LINE連携情報カード -->
  <%# <% unless @user.line_connected? %>
    <%# <div class="max-w-2xl mx-auto mb-6">
      <div class="bg-orange-50 border border-orange-200 rounded-lg p-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <i class="fab fa-line text-2xl text-orange-500"></i>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-orange-800 mb-2">
              LINE通知を有効にしませんか？
            </h3>
            <p class="text-sm text-orange-700 mb-4">
              LINE連携により、記念日の通知をLINEで受け取ることができます。大切な人への贈り物を忘れることがなくなります。
            </p>
            <div class="text-sm text-orange-700">
              <ul class="list-disc list-inside space-y-1 mb-4">
                <li>記念日やイベントの通知をLINEで受信</li>
                <li>リマインダー機能で贈り物の準備もバッチリ</li>
              </ul>
            </div>
            <p class="text-xs text-orange-600">
              <i class="fas fa-info-circle mr-1"></i>
              LINE連携は新規登録時に設定できます。既存アカウントでは現在サポートしていません。
            </p>
          </div>
        </div>
      </div>
    </div> %>
  <%# <% end %>

  <!-- メインコンテンツ -->
  <div class="w-full max-w-[320px] sm:max-w-[560px] md:max-w-[640px] mx-auto space-y-8 mb-8">
    <!-- アカウント管理 -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-3 sm:p-6"
         data-user-profile-target="card"
         data-action="mouseenter->user-profile#cardMouseEnter mouseleave->user-profile#cardMouseLeave">
      <h3 class="text-lg font-medium text-gray-800 mb-4">
        <i class="fas fa-cog mr-2 text-gray-600"></i>
        アカウント管理
      </h3>
      
      <div class="space-y-3">
        <%= link_to mypage_edit_path,
            class: "flex items-center p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors" do %>
          <i class="fas fa-user-edit text-blue-600 mr-3"></i>
          <div>
            <div class="font-medium text-gray-800">プロフィール編集</div>
            <div class="text-sm text-gray-600">名前やメールアドレスの変更</div>
          </div>
          <i class="fas fa-chevron-right text-gray-400 ml-auto"></i>
        <% end %>
        
        <%= link_to edit_user_registration_path,
            class: "flex items-center p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors" do %>
          <i class="fas fa-key text-green-600 mr-3"></i>
          <div>
            <div class="font-medium text-gray-800">パスワード変更</div>
            <div class="text-sm text-gray-600">アカウントのセキュリティ設定</div>
          </div>
          <i class="fas fa-chevron-right text-gray-400 ml-auto"></i>
        <% end %>
        
        <%= link_to my_index_gift_records_path,
            class: "flex items-center p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors" do %>
          <i class="fas fa-list text-purple-600 mr-3"></i>
          <div>
            <div class="font-medium text-gray-800">ギフト記録管理</div>
            <div class="text-sm text-gray-600">すべてのギフト記録を表示・編集</div>
          </div>
          <i class="fas fa-chevron-right text-gray-400 ml-auto"></i>
        <% end %>
        
        <%= link_to gift_people_path,
            class: "flex items-center p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors" do %>
          <i class="fas fa-users text-indigo-600 mr-3"></i>
          <div>
            <div class="font-medium text-gray-800">ギフト相手管理</div>
            <div class="text-sm text-gray-600">ギフト相手の情報を管理</div>
          </div>
          <i class="fas fa-chevron-right text-gray-400 ml-auto"></i>
        <% end %>
        
        <%= link_to favorites_path,
            class: "flex items-center p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors" do %>
          <i class="fas fa-heart text-green-600 mr-3"></i>
          <div>
            <div class="font-medium text-gray-800">お気に入り管理</div>
            <div class="text-sm text-gray-600">お気に入りに登録したギフト記録を表示</div>
          </div>
          <i class="fas fa-chevron-right text-gray-400 ml-auto"></i>
        <% end %>
        
        <%= link_to reminds_path,
            class: "flex items-center p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors" do %>
          <i class="fas fa-bell text-orange-600 mr-3"></i>
          <div class="flex-1">
            <div class="font-medium text-gray-800">記念日リマインダー管理</div>
            <div class="text-sm text-gray-600">記念日の通知設定と管理</div>
          </div>
          <i class="fas fa-chevron-right text-gray-400 ml-auto"></i>
        <% end %>
      </div>
    </div>

    <!-- 人気のギフト相手 -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-3 sm:p-6"
         data-user-profile-target="card"
         data-action="mouseenter->user-profile#cardMouseEnter mouseleave->user-profile#cardMouseLeave">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-medium text-gray-800">
          <i class="fas fa-star mr-2 text-yellow-500"></i>
          よくギフトを贈る相手 TOP5
        </h3>
        <%= link_to gift_people_path, class: "text-sm text-primary hover:text-primary-hover font-medium" do %>
          管理する →
        <% end %>
      </div>

      <% if @popular_gift_people.any? %>
        <div class="space-y-3">
          <% @popular_gift_people.each_with_index do |person, index| %>
            <div class="flex items-center p-2 sm:p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors"
                 data-user-profile-target="monthlyRow"
                 data-action="mouseenter->user-profile#monthlyRowMouseEnter mouseleave->user-profile#monthlyRowMouseLeave">
              <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center mr-3">
                <span class="text-sm font-bold text-yellow-600"><%= index + 1 %></span>
              </div>
              <div class="flex-1">
                <h4 class="font-medium text-gray-800"><%= person.name %></h4>
                <p class="text-sm text-gray-600">
                  <i class="fas fa-heart mr-1"></i>
                  <%= person.relationship&.name || "未設定" %>
                </p>
              </div>
              <div class="text-right">
                <% gift_count = current_user.gift_records.where(gift_people_id: person.id).count %>
                <span class="text-sm font-medium text-primary">
                  <%= pluralize(gift_count, "件") %>
                </span>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-users text-2xl text-gray-400"></i>
          </div>
          <p class="text-gray-500">まだギフト相手が登録されていません</p>
          <%= link_to new_gift_person_path, class: "inline-flex items-center mt-2 text-sm text-primary hover:text-primary-hover font-medium" do %>
            <i class="fas fa-plus mr-1"></i>
            ギフト相手を追加
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- 公開設定統計 -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-3 sm:p-6"
         data-user-profile-target="card"
         data-action="mouseenter->user-profile#cardMouseEnter mouseleave->user-profile#cardMouseLeave">
      <h3 class="text-lg font-medium text-gray-800 mb-4">
        <i class="fas fa-shield-alt mr-2 text-green-500"></i>
        公開設定
      </h3>
      
      <div class="space-y-4">
        <div class="flex items-center justify-between p-2 sm:p-3 bg-green-50 rounded-lg">
          <div class="flex items-center">
            <i class="fas fa-globe text-green-600 mr-2"></i>
            <span class="font-medium text-gray-800">公開ギフト記録</span>
          </div>
          <span class="text-lg font-bold text-green-600"><%= @public_records_count %>件</span>
        </div>
        
        <div class="flex items-center justify-between p-2 sm:p-3 bg-gray-50 rounded-lg">
          <div class="flex items-center">
            <i class="fas fa-lock text-gray-600 mr-2"></i>
            <span class="font-medium text-gray-800">非公開ギフト記録</span>
          </div>
          <span class="text-lg font-bold text-gray-600"><%= @private_records_count %>件</span>
        </div>
      </div>
      
      <p class="text-sm text-gray-600 mt-4">
        <i class="fas fa-info-circle mr-1"></i>
        公開設定はギフト記録作成・編集時に個別に変更できます
      </p>
    </div>

    <!-- 今後の記念日 -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-4 sm:p-6"
         data-user-profile-target="card"
         data-action="mouseenter->user-profile#cardMouseEnter mouseleave->user-profile#cardMouseLeave">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-medium text-gray-800">
          <i class="fas fa-bell mr-2 text-orange-500"></i>
          今後の記念日
        </h3>
        <%= link_to "管理する →", reminds_path, class: "text-sm text-primary hover:text-primary-hover font-medium" %>
      </div>

      <% if @upcoming_reminds.any? %>
        <div class="space-y-3">
          <% @upcoming_reminds.each do |remind| %>
            <div class="flex items-center justify-between p-2 sm:p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors"
                 data-user-profile-target="monthlyRow"
                 data-action="mouseenter->user-profile#monthlyRowMouseEnter mouseleave->user-profile#monthlyRowMouseLeave">
              <div class="flex-1">
                <h4 class="font-medium text-gray-800"><%= remind.gift_person.name %>さん</h4>
                <div class="text-sm text-gray-600">
                  <span class="mr-3">
                      <i class="fas fa-users text-blue-600"></i>
                    <%= remind.gift_person.relationship&.name || "未設定" %>
                  </span>
                  <span class="mr-3">
                    <i class="fas fa-calendar mr-1"></i>
                    <%= l(remind.notification_at, format: :short) %>
                  </span>
                  <% if remind.notification_sent_at.present? %>
                    <span>
                      <i class="fas fa-bell mr-1"></i>
                      <%= l(remind.notification_sent_at.in_time_zone, format: :short) %>
                    </span>
                  <% end %>
                </div>
              </div>
              <div class="text-right">
                <% notify_days_left = remind.days_until_notify %>
                <span class="text-sm font-medium <%= notify_days_left <= 1 ? 'text-red-600' : 'text-orange-600' %>">
                  <% if notify_days_left == 0 && !remind.is_sent? %>
                    通知日！
                  <% elsif notify_days_left == 1 %>
                    明日通知
                  <% elsif remind.is_sent? %>
                    送信済み
                  <% elsif notify_days_left < 0 %>
                    予定日経過
                  <% else %>
                    あと<%= notify_days_left %>日
                  <% end %>
                </span>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-bell text-2xl text-gray-400"></i>
          </div>
          <p class="text-gray-500">記念日リマインダーが設定されていません</p>
          <span class="inline-flex items-center mt-2 text-sm text-gray-400 font-medium">
            <i class="fas fa-plus mr-1"></i>
            記念日を設定
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>
