<% content_for(:title, "思い出ギフト") %>
<% content_for(:twitter_description, "思い出ギフトで、あなたの贈り物を記録し、素敵な思い出を残しましょう。誰かの定番が誰かの特別なギフトに。") %>
<% content_for(:twitter_image) do %>
<%
  begin
    asset_url('Group 6.png')
  rescue => e
    Rails.logger.error "Asset path resolution failed for image 26.png: #{e.message}"
    "#{request.base_url}/assets/gift-card-image.png"
  end
%>
<% end %>

<!-- ヒーローセクション -->
<div class="w-full text-center py-16 bg-gradient-to-r rounded-lg mb-12">

  <p class="text-xl text-black mb-8">
    思い出ギフトは自分が贈ったギフトを記録し
    <br>思い出を振り返るとともにギフト選びのサポートをするサービスです。
  </p>
  <% if user_signed_in? %>
    <%= link_to new_gift_record_path, 
        class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white transition-colors duration-300 shadow-lg hover:shadow-xl",
        style: "background-color: #FC913A;",
        onmouseenter: "this.style.backgroundColor='#E8823A'",
        onmouseleave: "this.style.backgroundColor='#FC913A'" do %>
      <i class="fas fa-plus mr-2"></i>
      思い出を記録する
    <% end %>
  <% else %>
    <%= link_to new_user_session_path, 
        class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white transition-colors duration-300 shadow-lg hover:shadow-xl",
        style: "background-color: #FC913A;",
        onmouseenter: "this.style.backgroundColor='#E8823A'",
        onmouseleave: "this.style.backgroundColor='#FC913A'" do %>
      <i class="fas fa-sign-in-alt mr-2"></i>
      ログイン・新規登録
    <% end %>
  <% end %>
</div>

<!-- 機能紹介セクション -->
<div class="w-full mb-12">
  <div class="w-full block">
    <div class="w-full p-6 bg-white rounded-lg shadow-md mb-8 block">
      <div class="flex items-center justify-center space-x-6">
        <!-- 左側：テキストとボタン -->
        <div class="flex flex-col items-start text-left">
          <p class="text-gray-600 leading-relaxed mb-6">
            思い出を記録しよう！<br><br>
            いつ、誰に、何を贈ったのかを<br>
            ギフト相手ごとに記録が出来ます
          </p>
          <% if user_signed_in? %>
            <%= link_to new_gift_record_path, 
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white transition-colors duration-300 shadow-sm hover:shadow-md",
                style: "background-color: #FC913A;",
                onmouseenter: "this.style.backgroundColor='#E8823A'",
                onmouseleave: "this.style.backgroundColor='#FC913A'" do %>
              <i class="fas fa-plus mr-2"></i>
              記録する！
            <% end %>
          <% else %>
            <%= link_to new_user_session_path, 
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white transition-colors duration-300 shadow-sm hover:shadow-md",
                style: "background-color: #FC913A;",
                onmouseenter: "this.style.backgroundColor='#E8823A'",
                onmouseleave: "this.style.backgroundColor='#FC913A'" do %>
              <i class="fas fa-sign-in-alt mr-2"></i>
              記録する！
            <% end %>
          <% end %>
        </div>

        <!-- 右側：画像 -->
        <div class="flex-shrink-0">
          <%= image_tag "top_gift_record_new.png", alt: "思い出を記録", class: "w-80 md:w-96 lg:w-[440px] xl:w-[480px] 2xl:w-[520px]  h-auto object-contain rounded-lg" %>
        </div>
      </div>
    </div>

    <div class="w-full p-6 bg-white rounded-lg shadow-md mb-8 block">
      <div class="flex items-center justify-center space-x-6">
        <!-- 左側：画像 -->
        <div class="flex-shrink-0">
          <%= image_tag "top_gift_people_new.png", alt: "みんなのギフト", class: "w-80 md:w-96 lg:w-[440px] xl:w-[480px] 2xl:w-[520px]  h-auto object-contain rounded-lg" %>
        </div>

        <!-- 右側：テキストとボタン -->
        <div class="flex flex-col items-start text-left">
          <p class="text-gray-600 leading-relaxed mb-6">
            ギフト相手の詳細を登録しよう！<br><br>
            ギフト相手を登録することで、ギフト相手ごとに記録を見ることが出来ます。<br>
            また、好き嫌いを登録しておくことで、より喜んでもらえるギフト選びが可能です
          </p>
          <% if user_signed_in? %>
            <%= link_to new_gift_person_path,
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white transition-colors duration-300 shadow-sm hover:shadow-md",
                style: "background-color: #FC913A;",
                onmouseenter: "this.style.backgroundColor='#E8823A'",
                onmouseleave: "this.style.backgroundColor='#FC913A'" do %>
              <i class="fas fa-user-plus mr-2"></i>
              記録する！
            <% end %>
          <% else %>
            <%= link_to new_user_session_path, 
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white transition-colors duration-300 shadow-sm hover:shadow-md",
                style: "background-color: #FC913A;",
                onmouseenter: "this.style.backgroundColor='#E8823A'",
                onmouseleave: "this.style.backgroundColor='#FC913A'" do %>
              <i class="fas fa-sign-in-alt mr-2"></i>
              登録する！
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="w-full p-6 bg-white rounded-lg shadow-md mb-8 block">
      <div class="flex items-center justify-center space-x-6">

        <!-- 左側：テキストとボタン -->
        <div class="flex flex-col items-center text-center">
          <p class="text-gray-600 leading-relaxed mb-6">
            みんなのギフトを見に行こう！<br><br>
            記録した思い出を公開出来ます。<br>
            ギフト選びを迷った際にあっと驚くようなアイディが見つかるかも
          </p>
          <%= link_to gift_records_path, 
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white transition-colors duration-300 shadow-sm hover:shadow-md",
              style: "background-color: #FC913A;",
              onmouseenter: "this.style.backgroundColor='#E8823A'",
              onmouseleave: "this.style.backgroundColor='#FC913A'" do %>
            <i class="fas fa-eye mr-2"></i>
            見に行く！
          <% end %>
        </div>
         <!-- 右側：画像 -->
        <div class="flex-shrink-0">
          <%= image_tag "top_minna_no_gift.png", alt: "みんなのギフト", class: "w-80 md:w-96 lg:w-[440px] xl:w-[480px] 2xl:w-[520px]  h-auto object-contain rounded-lg" %>
        </div>
      </div>
    </div>
  </div>
</div>
