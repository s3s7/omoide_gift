<% content_for(:title, "お問い合わせ") %>

<!-- メインコンテナ -->
<div class="max-w-4xl mx-auto px-4 py-8">
  <!-- お問い合わせフォーム -->
    <!-- Googleフォーム埋め込み -->
    <div class="w-full" style="min-height: 1100px;">
      <iframe 
        src="https://docs.google.com/forms/d/e/1FAIpQLSfRJ4OVNBRE-E0FT6hRCkw9U7bL5g3A0Ypu_6HWGR4WnVIbYQ/viewform?usp=dialog" 
        width="100%" 
        height="1000" 
        frameborder="0" 
        marginheight="0" 
        marginwidth="0"
        class="rounded-lg"
        style="border: none; overflow: hidden;">
        読み込んでいます…
      </iframe>
    </div>

  <!-- 注意事項 -->
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
    <h3 class="text-lg font-semibold text-blue-800 mb-4">
      <i class="fas fa-info-circle mr-2"></i>
      お問い合わせ前にご確認ください
    </h3>
    <ul class="list-disc list-inside space-y-2 text-blue-700">
      <li>まずは<%= link_to "使い方ガイド", how_to_use_path, class: "underline hover:text-blue-900" %>をご確認ください</li>
    </ul>
  </div>

  <!-- その他の連絡手段 -->
  <div class="text-center mt-8 p-4 bg-gray-50 rounded-lg">
    <p class="text-sm text-gray-600">
      <i class="fas fa-shield-alt mr-1"></i>
      個人情報は<%= link_to "プライバシーポリシー", privacy_path, class: "text-primary hover:underline" %>に従って適切に管理いたします
    </p>
  </div>
</div>
